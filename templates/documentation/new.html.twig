{% extends 'base.html.twig' %}

{% form_theme form 'form/_form_errors.html.twig' %}

{% block title %}
{{ 'title.create_documentation'|trans }}
{% endblock %}


{% block body %}

  <style>
/* ========================================
   CREATE DOCUMENTATION PAGE
   ======================================== */

.create-doc-page {
    min-height: 80vh;
    padding: 60px 20px;
    display: flex;
    justify-content: center;
}

.create-doc-card {
    width: 100%;
    max-width: 850px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26,40,77,0.1);
    padding: 40px;
    position: relative;
}

.create-doc-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

/* Header */
.create-doc-title {
    text-align: center;
    margin-bottom: 35px;
}

.create-doc-title h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: #1a284d;
}

/* Form fields */
.form-modern {
    margin-bottom: 20px;
}

.form-modern input,
.form-modern textarea,
.form-modern select {
    width: 100%;
    padding: 14px 16px;
    border-radius: 12px;
    border: 1px solid #e0e0e0;
    font-size: 15px;
    transition: all 0.3s ease;
}

.form-modern textarea {
    min-height: 140px;
    resize: vertical;
}

.form-modern input:focus,
.form-modern textarea:focus,
.form-modern select:focus {
    border-color: #1a284d;
    box-shadow: 0 0 0 3px rgba(26,40,77,0.08);
    outline: none;
}

/* File input */
.form-modern input[type="file"] {
    padding: 10px;
    background: #f8f9fb;
}

/* Submit button */
.submit-doc-btn {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    margin-top: 15px;
    transition: all 0.3s ease;
}

.submit-doc-btn:hover {
    transform: translateY(-2px);
}

/* Back link */
.doc-back {
    text-align: center;
    margin-top: 25px;
}

.doc-back a {
    color: #1a284d;
    text-decoration: none;
    font-weight: 500;
}

.doc-back a:hover {
    text-decoration: underline;
}

/* Responsive */
@media (max-width: 768px) {
    .create-doc-card {
        padding: 25px;
    }
}
.create-doc-card {
    overflow: hidden;
}
</style>

  
        <div class="col-6 mx-auto">
            {% include 'include/flashes.html.twig' %}
        </div>
  

<div class="create-doc-page">
    <div class="create-doc-card">
    <div class="create-doc-title">
    <h1>{{ 'title.create_documentation'|trans }}</h1>
</div>
      {{ form_start(form) }}

<div class="form-modern">
    {{ form_row(form.titleFr) }}
</div>

<div class="form-modern">
    {{ form_row(form.titleEn) }}
</div>

<div class="form-modern">
    {{ form_row(form.contentFr) }}
</div>

<div class="form-modern">
    {{ form_row(form.contentEn) }}
</div>

<div class="form-modern">
    {{ form_row(form.category) }}
</div>

<div class="form-modern">
    {{ form_row(form.file) }}
</div>


{{ form_end(form) }}

      <div class="doc-back">
    <a href="{{ path('documentation_index') }}">
        ‚Üê {{ 'button.back_list'|trans }}
    </a>

    </div>
        </div>
            </div>
{% endblock %}
