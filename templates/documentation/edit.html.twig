{% extends 'base.html.twig' %}

{% form_theme form 'form/_form_errors.html.twig' %}

{% block title %}
    {{ 'button.edit'|trans }} {{ documentation.titleFr }}
{% endblock %}

{% block body %}

<style>
/* ========================================
   EDIT DOCUMENTATION - PREMIUM VERSION
   ======================================== */

.edit-doc-page {
    min-height: 80vh;
    padding: 60px 20px;
    display: flex;
    justify-content: center;
    animation: fadeInPage 0.4s ease;
}

@keyframes fadeInPage {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
}

.edit-doc-card {
    width: 100%;
    max-width: 850px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26,40,77,0.1);
    padding: 40px;
    position: relative;
    overflow: hidden;
}

.edit-doc-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
    border-top-left-radius: 24px;
    border-top-right-radius: 24px;
}

/* Header */
.edit-doc-title {
    text-align: center;
    margin-bottom: 35px;
}

.edit-doc-title h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: #1a284d;
}

/* Form styling */
.form-modern {
    margin-bottom: 20px;
}

.form-modern input,
.form-modern textarea,
.form-modern select {
    width: 100%;
    padding: 14px 16px;
    border-radius: 12px;
    border: 1px solid #e0e0e0;
    font-size: 15px;
    transition: all 0.3s ease;
}

.form-modern textarea {
    min-height: 140px;
    resize: vertical;
}

.form-modern input:focus,
.form-modern textarea:focus,
.form-modern select:focus {
    border-color: #1a284d;
    box-shadow: 0 0 0 3px rgba(26,40,77,0.08);
    outline: none;
}

/* Submit button */
.submit-doc-btn {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    font-weight: 600;
    font-size: 1rem;
    margin-top: 10px;
    transition: all 0.3s ease;
}

.submit-doc-btn:hover {
    transform: translateY(-2px);
}

/* Back link */
.doc-back {
    margin-top: 25px;
    text-align: center;
}

.doc-back a {
    color: #1a284d;
    text-decoration: none;
    font-weight: 500;
}

.doc-back a:hover {
    text-decoration: underline;
}

/* Delete button */
.delete-section {
    margin-top: 20px;
    text-align: center;
}

.delete-section button {
    padding: 12px 20px;
    border-radius: 10px;
    border: none;
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
    font-weight: 600;
    transition: all 0.3s ease;
}

.delete-section button:hover {
    background: #dc3545;
    color: white;
}

/* Responsive */
@media (max-width: 768px) {
    .edit-doc-card {
        padding: 25px;
    }
}
</style>

<div class="col-11 col-md-8 col-lg-6 mx-auto mb-4">
    {% include 'include/flashes.html.twig' %}
</div>

<div class="edit-doc-page">
    <div class="edit-doc-card">

        <div class="edit-doc-title">
            <h1>
                {{ 'button.edit'|trans }} "{{ documentation.titleFr }}"
            </h1>
        </div>

        {{ form_start(form) }}

        <div class="form-modern">
            {{ form_widget(form) }}
        </div>

        {{ form_end(form) }}

        <div class="doc-back">
            <a href="{{ path('documentation_index') }}">
                ‚Üê {{ 'button.back_list'|trans }}
            </a>
        </div>

        <div class="delete-section">
            {{ include('documentation/_delete_form.html.twig') }}
        </div>

    </div>
</div>

{% endblock %}