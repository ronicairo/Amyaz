{% extends 'base.html.twig' %}

{% form_theme registrationForm 'form/_form_errors.html.twig' %}

{% block title %}
	{{ 'button.register'|trans }}
{% endblock %}

{% block body %}

<style>
/* ========================================
   PAGE INSCRIPTION (mÃªme style login)
   ======================================== */

.register-page {
    min-height: 80vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
}

.register-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

.register-container {
    width: 100%;
    max-width: 500px;
    position: relative;
    z-index: 1;
}

.register-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.12);
    padding: 40px 50px;
    position: relative;
    overflow: hidden;
}

.register-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

.register-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(26, 40, 77, 0.1), rgba(179, 226, 236, 0.2));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px;
}

.register-icon i {
    font-size: 1.5rem;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

.register-card h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.7rem;
    color: #1a284d;
    text-align: center;
    margin-bottom: 25px;
}

.form-group {
    margin-bottom: 18px;
    position: relative;
}

.form-group input {
    width: 100%;
    padding: 14px 18px;
    font-size: 0.95rem;
    font-family: 'Outfit', sans-serif;
    background: #f8fbfc;
    border: 2px solid #e8f4f8;
    border-radius: 12px;
    transition: all 0.3s ease;
}

.form-group input:focus {
    outline: none;
    border-color: #b3e2ec;
    background: white;
    box-shadow: 0 0 0 3px rgba(179, 226, 236, 0.2);
}

.form-group .show-password {
    position: absolute;
    right: 18px;
    top: 42px;
    color: #999;
    cursor: pointer;
}

.btn-register {
    width: 100%;
    padding: 14px 25px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border: none;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-weight: 600;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(26, 40, 77, 0.3);
}

.btn-register:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26, 40, 77, 0.4);
}

.register-links {
    text-align: center;
    margin-top: 20px;
    font-size: 0.9rem;
}

.register-links a {
    font-weight: 600;
    color: #1a284d;
    text-decoration: none;
}

.register-links a:hover {
    text-decoration: underline;
}
</style>

<div class="register-page">
    <div class="register-container">
        <div class="register-card">

            <div class="register-icon">
                <i class="bi bi-person-plus"></i>
            </div>

            <h1>{{ 'button.register'|trans }}</h1>

            {{ form_start(registrationForm) }}

                <div class="form-group">
                    {{ form_row(registrationForm.email) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.username) }}
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.password.first) }}
                    <i class="bi bi-eye show-password" id="togglePasswordFirst"
                       onclick="togglePasswordVisibility('first')"></i>
                </div>

                <div class="form-group">
                    {{ form_row(registrationForm.password.second) }}
                    <i class="bi bi-eye show-password" id="togglePasswordSecond"
                       onclick="togglePasswordVisibility('second')"></i>
                </div>

                <button type="submit" class="btn-register mt-3">
                    <i class="bi bi-person-check me-2"></i>
                    {{ 'button.register'|trans }}
                </button>

            {{ form_end(registrationForm) }}

            <div class="register-links">
                <p>
                    {{ 'button.already_account'|trans }}
                    <a href="{{ path('app_login') }}">
                        {{ 'button.login'|trans }}
                    </a>
                </p>
            </div>

        </div>
    </div>
</div>

<script>
function togglePasswordVisibility(field) {
    const input = document.getElementById('registration_form_password_' + field);
    const icon = document.getElementById('togglePassword' + field.charAt(0).toUpperCase() + field.slice(1));
    if (input.type === 'password') {
        input.type = 'text';
        icon.classList.replace('bi-eye', 'bi-eye-slash');
    } else {
        input.type = 'password';
        icon.classList.replace('bi-eye-slash', 'bi-eye');
    }
}
</script>

{% endblock %}