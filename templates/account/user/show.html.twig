{% extends 'base.html.twig' %}

{% block title %}{{ 'account-user.title'|trans }}{% endblock %}

{% block body %}

<style>
/* ========================================
   USER DETAILS PREMIUM
   ======================================== */

.user-page {
    min-height: 80vh;
    padding: 60px 20px;
    position: relative;
}

.user-container {
    max-width: 900px;
    margin: 0 auto;
}

.user-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26,40,77,0.1);
    padding: 35px;
    margin-bottom: 30px;
}

.user-card h2 {
    font-family: 'Playfair Display', serif;
    font-size: 1.4rem;
    color: #1a284d;
    margin-bottom: 20px;
}

.user-header {
    text-align: center;
    margin-bottom: 40px;
}

.user-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: #1a284d;
}

.user-info-item {
    display: flex;
    justify-content: space-between;
    padding: 12px 0;
    border-bottom: 1px solid #eee;
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
}

.user-info-item strong {
    color: #1a284d;
}

.user-list {
    list-style: none;
    padding: 0;
    margin: 0;
}

.user-list li {
    padding: 10px 0;
    border-bottom: 1px solid #eee;
    font-size: 0.9rem;
}

.user-list small {
    color: #888;
}

.btn-back {
    padding: 12px 25px;
    border-radius: 10px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-back:hover {
    transform: translateX(-3px);
    color: white;
}

.btn-delete {
    padding: 12px 25px;
    border-radius: 10px;
    background: linear-gradient(135deg, #dc3545, #e94560);
    color: white;
    border: none;
    transition: all 0.3s ease;
}

.btn-delete:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(220,53,69,0.3);
}

.empty-message {
    color: #888;
    font-style: italic;
    text-align: center;
}

/* Responsive */
@media (max-width: 768px) {
    .user-card {
        padding: 25px;
    }

    .user-info-item {
        flex-direction: column;
        gap: 5px;
    }
}
</style>

<div class="user-page">
    <div class="user-container">

        <div class="user-header">
            <h1>{{ 'account-user.title'|trans }} {{ user.username }}</h1>
        </div>

        {# INFOS #}
        <div class="user-card">
            <h2>{{ 'account-user.info'|trans|default('Informations') }}</h2>

            <div class="user-info-item">
                <strong>Email</strong>
                <span>{{ user.email }}</span>
            </div>

            <div class="user-info-item">
                <strong>{{ 'account-user.date_creation'|trans }}</strong>
                <span>{{ user.createdAt|date('d/m/Y H:i') }}</span>
            </div>
        </div>

        {# COMMENTAIRES #}
        <div class="user-card">
            <h2>Commentaires</h2>

            {% if comments|length > 0 %}
                <ul class="user-list">
                    {% for comment in comments %}
                        <li>
                            {{ comment.opinion }}
                            <br>
                            <small>Le {{ comment.createdAt|date('d/m/Y H:i') }}</small>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="empty-message">{{ 'account-user.no_comments'|trans }}</p>
            {% endif %}
        </div>

        {# TRADUCTIONS #}
        <div class="user-card">
            <h2>Traductions</h2>

            {% if traductions|length > 0 %}
                <ul class="user-list">
                    {% for traduction in traductions %}
                        <li>
                            {{ traduction.wordFR }} - {{ traduction.wordEN }}
                            <br>
                            <small>Le {{ traduction.createdAt|date('d/m/Y H:i') }}</small>
                        </li>
                    {% endfor %}
                </ul>
            {% else %}
                <p class="empty-message">{{ 'account-user.no_translation'|trans }}</p>
            {% endif %}
        </div>

        <div class="text-center mt-4">
            <a href="{{ path('app_user_index') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                {{ 'button.back_list'|trans }}
            </a>
        </div>

        {% if is_granted('ROLE_ADMIN') %}
            <div class="text-center mt-4">
                <form action="{{ path('admin_user_delete', {'id': user.id}) }}"
                      method="post"
                      onsubmit="return confirm('Êtes-vous sûr de vouloir supprimer cet utilisateur ?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ user.id) }}">
                    <button type="submit" class="btn-delete">
                        <i class="bi bi-trash"></i>
                        {{ 'account-user.delete_user'|trans }}
                    </button>
                </form>
            </div>
        {% endif %}

    </div>
</div>

{% endblock %}