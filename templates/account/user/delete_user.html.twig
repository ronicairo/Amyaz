{% extends 'base.html.twig' %}
{% form_theme confirmationForm 'form/_form_errors.html.twig' %}

{% block title %}Suppression d'un utilisateur{% endblock %}

{% block body %}

<style>
/* ========================================
   ADMIN DELETE USER PAGE
   ======================================== */

.delete-page {
    min-height: 80vh;
    padding: 60px 20px;
    display: flex;
    justify-content: center;
    align-items: center;
}

.delete-card {
    width: 100%;
    max-width: 520px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(220,53,69,0.15);
    padding: 40px;
    position: relative;
    border: 1px solid rgba(220,53,69,0.1);
}

.delete-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #dc3545, #ff6b81);
}

.delete-card h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: #dc3545;
    text-align: center;
    margin-bottom: 15px;
}

.delete-warning {
    text-align: center;
    font-size: 0.9rem;
    color: #666;
    margin-bottom: 25px;
}

.delete-warning strong {
    color: #dc3545;
}

.delete-btn {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, #dc3545, #e94560);
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 10px;
}

.delete-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(220,53,69,0.35);
}

.btn-back {
    display: inline-block;
    margin-top: 15px;
    text-decoration: none;
    font-size: 0.9rem;
    color: #1a284d;
}

.btn-back:hover {
    text-decoration: underline;
}

/* Responsive */
@media (max-width: 480px) {
    .delete-card {
        padding: 25px;
    }
}
</style>

<div class="delete-page">

    <div class="delete-card">

        {% include 'include/flashes.html.twig' %}

        <h1>
            <i class="bi bi-exclamation-triangle-fill me-2"></i>
            Suppression du compte
        </h1>

        <div class="delete-warning">
            Vous êtes sur le point de supprimer définitivement le compte de  
            <strong>{{ user.username }}</strong>.  
            Cette action est irréversible.
        </div>

        {{ form_start(confirmationForm) }}

            {{ form_row(confirmationForm.password) }}

            <button type="submit" class="delete-btn">
                <i class="bi bi-trash-fill me-2"></i>
                Confirmer la suppression
            </button>

        {{ form_end(confirmationForm) }}

        <div class="text-center">
            <a href="{{ path('app_user_index') }}" class="btn-back">
                ← Retour à la liste
            </a>
        </div>

    </div>

</div>

{% endblock %}