{% extends "base.html.twig" %}

{% block title %}{{ 'title.edit_password'|trans }}{% endblock %}

{% block body %}
<style>
/* ========================================
   PAGE MODIFICATION MOT DE PASSE
   ======================================== */
.edit-password-page {
    min-height: 80vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 40px 20px;
}

.edit-password-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

/* Container principal */
.edit-password-container {
    width: 100%;
    max-width: 500px;
    position: relative;
    z-index: 1;
}

/* Card */
.edit-password-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.12);
    padding: 40px 50px;
    position: relative;
    overflow: hidden;
}

.edit-password-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

/* Icône */
.edit-password-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(26, 40, 77, 0.1), rgba(179, 226, 236, 0.2));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px;
}

.edit-password-icon i {
    font-size: 1.5rem;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* Titre */
.edit-password-card h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.7rem;
    color: #1a284d;
    text-align: center;
    margin-bottom: 30px;
}

/* Info sécurité */
.security-info {
    background: rgba(179, 226, 236, 0.15);
    border: 1px solid rgba(179, 226, 236, 0.3);
    border-radius: 12px;
    padding: 15px 20px;
    margin-bottom: 25px;
}

.security-info p {
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    color: #666;
    margin: 0;
    display: flex;
    align-items: flex-start;
    gap: 10px;
}

.security-info i {
    color: #1a284d;
    font-size: 1rem;
    margin-top: 2px;
}

/* ========================================
   FORMULAIRE STYLISÉ
   ======================================== */
.edit-password-card form {
    width: 100%;
}

.edit-password-card form > div,
.edit-password-card form .mb-3,
.edit-password-card form .form-group {
    margin-bottom: 20px !important;
    position: relative;
}

.edit-password-card form label {
    display: block;
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1a284d;
    margin-bottom: 8px;
}

.edit-password-card form input[type="password"],
.edit-password-card form input[type="text"],
.edit-password-card form .form-control {
    width: 100%;
    padding: 14px 18px;
    font-size: 0.95rem;
    font-family: 'Outfit', sans-serif;
    color: #333;
    background: #f8fbfc !important;
    border: 2px solid #e8f4f8 !important;
    border-radius: 12px !important;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.edit-password-card form input:focus,
.edit-password-card form .form-control:focus {
    outline: none;
    border-color: #b3e2ec !important;
    background: white !important;
    box-shadow: 0 0 0 3px rgba(179, 226, 236, 0.2) !important;
}

.edit-password-card form input::placeholder {
    color: #aaa;
}

/* Erreurs de validation */
.edit-password-card form .invalid-feedback,
.edit-password-card form .form-error-message,
.edit-password-card form .help-block {
    color: #dc3545;
    font-family: 'Outfit', sans-serif;
    font-size: 0.8rem;
    margin-top: 8px;
    display: flex;
    align-items: center;
    gap: 5px;
}

.edit-password-card form .invalid-feedback::before,
.edit-password-card form .form-error-message::before {
    content: '⚠';
}

.edit-password-card form .is-invalid,
.edit-password-card form input.is-invalid {
    border-color: #dc3545 !important;
    background: rgba(220, 53, 69, 0.05) !important;
}

/* Bouton submit */
.edit-password-card form button[type="submit"],
.edit-password-card form .btn,
.edit-password-card form input[type="submit"] {
    width: 100%;
    padding: 14px 25px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c) !important;
    color: white !important;
    border: none !important;
    border-radius: 12px !important;
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(26, 40, 77, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    margin-top: 25px;
}

.edit-password-card form button[type="submit"]:hover,
.edit-password-card form .btn:hover,
.edit-password-card form input[type="submit"]:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26, 40, 77, 0.4);
}

/* Lien retour */
.back-link {
    text-align: center;
    margin-top: 20px;
}

.back-link a {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    color: #2d4a7c;
    text-decoration: none;
    transition: color 0.3s ease;
    display: inline-flex;
    align-items: center;
    gap: 6px;
}

.back-link a:hover {
    color: #1a284d;
    text-decoration: underline;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 600px) {
    .edit-password-page {
        padding: 20px 15px;
    }
    
    .edit-password-container {
        max-width: 100%;
    }
    
    .edit-password-card {
        padding: 35px 30px;
        border-radius: 20px;
    }
    
    .edit-password-card h1 {
        font-size: 1.5rem;
    }
    
    .edit-password-icon {
        width: 55px;
        height: 55px;
    }
    
    .edit-password-icon i {
        font-size: 1.3rem;
    }
    
    .edit-password-card form input[type="password"],
    .edit-password-card form input[type="text"],
    .edit-password-card form .form-control {
        padding: 12px 15px;
        font-size: 0.9rem;
    }
    
    .edit-password-card form button[type="submit"],
    .edit-password-card form .btn {
        padding: 12px 20px;
        font-size: 0.9rem;
    }
}

@media (max-width: 400px) {
    .edit-password-card {
        padding: 30px 22px;
    }
    
    .edit-password-card h1 {
        font-size: 1.4rem;
    }
    
    .edit-password-icon {
        width: 50px;
        height: 50px;
    }
    
    .edit-password-icon i {
        font-size: 1.2rem;
    }
}
</style>

<div class="edit-password-page">
    <div class="edit-password-container">
        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>
        
        <div class="edit-password-card">
            {# Icône #}
            <div class="edit-password-icon">
                <i class="bi bi-shield-lock"></i>
            </div>
            
            {# Titre #}
            <h1>{{ 'title.edit_password'|trans }}</h1>
            
            
            {# Formulaire #}
            {{ form(form) }}
            
            {# Lien retour #}
            <div class="back-link">
                <a href="javascript:history.back()">
                    <i class="bi bi-arrow-left"></i>
					 {{ 'title.back'|trans|default('Annuler') }}
                </a>
            </div>
        </div>
    </div>
</div>
{% endblock %}