{% extends 'base.html.twig' %}

{% block title %}
    {{ 'pending_request.title'|trans }}
{% endblock %}

{% block body %}

<style>
/* ========================================
   PENDING REQUEST PAGE
   ======================================== */

.pending-page {
    min-height: 80vh;
    padding: 60px 20px;
}

.pending-container {
    max-width: 1200px;
    margin: 0 auto;
}

.pending-header {
    text-align: center;
    margin-bottom: 40px;
}

.pending-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2.2rem;
    color: #1a284d;
}

/* Card */
.pending-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26,40,77,0.1);
    padding: 30px;
    overflow: hidden;
}

/* Table */
.table thead {
    background: linear-gradient(90deg, #1a284d, #2d4a7c);
    color: white;
}

.table th {
    border: none;
    font-weight: 600;
}

.table td {
    vertical-align: middle;
}

/* Action button */
.btn-edit {
    border-radius: 8px;
    padding: 6px 10px;
    transition: all 0.3s ease;
}

.btn-edit:hover {
    transform: translateY(-2px);
}

/* Empty state */
.empty-state {
    text-align: center;
    padding: 80px 20px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26,40,77,0.08);
}

.empty-state i {
    font-size: 3rem;
    color: #b3e2ec;
    margin-bottom: 15px;
}

.empty-state p {
    color: #666;
}

/* Responsive table stacked */
@media (max-width: 768px) {

    table thead {
        display: none;
    }

    table, table tbody, table tr, table td {
        display: block;
        width: 100%;
    }

    table tr {
        background: white;
        margin-bottom: 15px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        padding: 15px;
    }

    table td {
        border: none;
        text-align: left !important;
        padding: 8px 0;
    }

    table td::before {
        content: attr(data-label);
        font-weight: 600;
        display: block;
        color: #1a284d;
        font-size: 0.8rem;
        margin-bottom: 3px;
    }
}
</style>

<div class="pending-page">
    <div class="pending-container">

        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>

        <div class="pending-header">
            <h1>{{ 'pending_request.title'|trans }}</h1>
        </div>

        {% if pendingTranslations is empty %}

            <div class="empty-state">
                <i class="bi bi-inbox"></i>
                <p>{{ 'pending_request.no_request_pending'|trans }}</p>
            </div>

        {% else %}

            <div class="pending-card table-responsive">
                <table class="table text-center align-middle">
                    <thead>
                        <tr>
                            <th>{{ 'post.french_word'|trans }}</th>
                            <th>{{ 'post.english_word'|trans }}</th>
                            <th>{{ 'post.rif_singular'|trans }}</th>
                            <th>{{ 'post.rif_plural'|trans }}</th>
                            <th>{{ 'post.phonetic_singular'|trans }}</th>
                            <th>{{ 'post.phonetic_plural'|trans }}</th>
                            <th>{{ 'post.requested_by'|trans }}</th>
                            <th>Action</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for translation in pendingTranslations %}
                            <tr>
                                <td data-label="{{ 'post.french_word'|trans }}">{{ translation.wordFR }}</td>
                                <td data-label="{{ 'post.english_word'|trans }}">{{ translation.wordEN }}</td>
                                <td data-label="{{ 'post.rif_singular'|trans }}">{{ translation.singular }}</td>
                                <td data-label="{{ 'post.rif_plural'|trans }}">{{ translation.plural }}</td>
                                <td data-label="{{ 'post.phonetic_singular'|trans }}">{{ translation.phoneticSingular }}</td>
                                <td data-label="{{ 'post.phonetic_plural'|trans }}">{{ translation.phoneticPlural }}</td>
                                <td data-label="{{ 'post.requested_by'|trans }}">
                                    {% if translation.requestedBy %}
                                        {{ translation.requestedBy.username }}
                                    {% else %}
                                        {{ 'post.no_user'|trans }}
                                    {% endif %}
                                </td>
                                <td data-label="Action">
                                    <a href="{{ path('app_traduction_edit_status', {'id': translation.id}) }}"
                                       class="btn btn-outline-secondary btn-sm btn-edit">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>

        {% endif %}

    </div>
</div>

{% endblock %}