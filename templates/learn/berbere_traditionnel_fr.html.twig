<style>
/* ========================================
   PAGE APPRENTISSAGE TIFINAGH
   ======================================== */

/* Header de la page */
.learning-header {
    text-align: center;
    padding: 60px 20px 40px;
    max-width: 900px;
    margin: 0 auto;
}

.learning-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 5vw, 3rem);
    color: #000000;
    margin-bottom: 20px;
    line-height: 1.3;
}

.learning-header .lead {
    color: #555;
    font-size: 1.1rem;
    line-height: 1.8;
    margin-bottom: 20px;
}

/* ========================================
   TABLE ALPHABET
   ======================================== */
.alphabet-table-section {
    max-width: 900px;
	width: 100%;
    padding: 0 20px;
}

.alphabet-table-container {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(0, 0, 0, 0.08);
    overflow: hidden;
    position: relative;
}

.alphabet-table-container::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    linear-gradient(135deg, #04068e, #aacff1);}

.alphabet-table {
    width: 100%;
    border-collapse: collapse;
    margin: 0;
}

.alphabet-table thead {
    background: white;
    border-bottom: 2px solid #eee;
}

.alphabet-table thead th {
    color: #000000;
    font-family: 'Playfair Display', serif;
    font-weight: 600;
    font-size: 1rem;
    padding: 20px 15px;
    text-align: center;
    border: none;
    position: relative;
}

.alphabet-table thead th::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 50%;
    transform: translateX(-50%);
    width: 30px;
    height: 3px;
    linear-gradient(135deg, #04068e, #aacff1);    border-radius: 2px;
    opacity: 0;
    transition: all 0.3s ease;
}

.alphabet-table thead th:hover::after {
    opacity: 1;
}

.alphabet-table tbody tr {
    transition: all 0.3s ease;
}

.alphabet-table tbody tr:nth-child(even) {
    background: #fafafa;
}

.alphabet-table tbody tr:hover {
    background: rgba(160, 93, 5, 0.05);
}

.alphabet-table tbody td {
    padding: 15px;
    text-align: center;
    border: none;
    border-bottom: 1px solid #f0f0f0;
    font-family: 'Outfit', sans-serif;
    color: #333;
    font-size: 1rem;
}

/* Lettre Tifinagh plus grande */
.alphabet-table tbody td:first-child {
    font-size: 1.8rem;
    font-weight: bold;
    color: #000000;
}

/* Valeur phonétique - nouveau style */
.phonetic-tag {
    display: inline-block;
    background: white;
    color: #333;
    padding: 6px 14px;
    border-radius: 8px;
    font-size: 0.9rem;
    font-weight: 500;
    font-family: 'Outfit', sans-serif;
    border: 1px solid #e0e0e0;
    transition: all 0.3s ease;
}

.alphabet-table tbody tr:hover .phonetic-tag {
    border-color: #000000;
    color: #000000;
}


/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 768px) {
    .alphabet-table thead th {
        font-size: 0.9rem;
        padding: 15px 10px;
    }
    
    .alphabet-table tbody td {
        padding: 12px 8px;
        font-size: 0.9rem;
    }
    
