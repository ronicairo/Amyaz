{% extends 'base.html.twig' %}

{% block title %}Amyaz - {{ 'navigation.grammar'|trans }}{% endblock %}

{% block body %}

<style>
/* ========================================
   PAGE GRAMMAIRE PREMIUM
   ======================================== */

.grammar-page {
    min-height: 80vh;
    padding: 20px 20px;
    position: relative;
}

.grammar-page::before {
    content: '';
    position: absolute;
    inset: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

.grammar-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
}

/* HEADER */
.grammar-header {
    text-align: center;
    margin-bottom: 50px;
    margin-top: 0px;
}

.grammar-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 5vw, 3rem);
    color: #1a284d;
    margin-bottom: 15px;
}

.grammar-header p {
    font-family: 'Outfit', sans-serif;
    font-size: 1.05rem;
    color: #666;
    max-width: 700px;
    margin: 0 auto;
}

/* GRID */
.grammar-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
}

/* CARD */
.grammar-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26, 40, 77, 0.1);
    transition: all 0.3s ease;
    position: relative;
    overflow: hidden;
}

.grammar-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

.grammar-card:hover {
    transform: translateY(-6px);
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.15);
}

.grammar-card-body {
    padding: 30px;
    display: flex;
    flex-direction: column;
    height: 100%;
}

.grammar-card-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.3rem;
    color: #1a284d;
    margin-bottom: 12px;
}

.grammar-card-subtitle {
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 25px;
    flex-grow: 1;
}

.btn-view {
    align-self: flex-start;
    padding: 12px 22px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-view:hover {
    transform: translateX(4px);
    color: white;
}

/* EMPTY STATE */
.no-sheets {
    grid-column: 1 / -1;
    text-align: center;
    padding: 80px 20px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26, 40, 77, 0.08);
}

/* RESPONSIVE */
@media (max-width: 768px) {
    .grammar-grid {
        grid-template-columns: 1fr;
    }
}
</style>

<div class="grammar-page">
    <div class="grammar-container">

        <div class="grammar-header">
            <h1>{{ 'grammar.title'|trans }}</h1>
            <p>{{ 'grammar.p1'|trans|raw }}</p>
            <p>{{ 'grammar.p2'|trans|raw }}</p>
        </div>

        <div class="grammar-grid">
            {% for sheet in grammarSheets %}
                <div class="grammar-card">
                    <div class="grammar-card-body">

                        <h2 class="grammar-card-title">
                            {% if app.request.locale == 'en' %}
                                {{ sheet.titleEn|raw }}
                            {% else %}
                                {{ sheet.titleFr|raw }}
                            {% endif %}
                        </h2>

                        <p class="grammar-card-subtitle">
                            {% if app.request.locale == 'en' %}
                                {{ sheet.subtitleEn|raw }}
                            {% else %}
                                {{ sheet.subtitleFr|raw }}
                            {% endif %}
                        </p>

                        <a href="{{ path('grammarsheet_show', {'id': sheet.id}) }}" class="btn-view">
                            <i class="bi bi-eye"></i>
                            {{ 'button.show'|trans|default('Voir') }}
                        </a>

                    </div>
                </div>
            {% else %}
                <div class="no-sheets">
                    <h3>{{ 'grammar.no_fiche'|trans }}</h3>
                </div>
            {% endfor %}
        </div>

    </div>
</div>

{% endblock %}