{% extends 'base.html.twig' %}
{% form_theme passForm 'form/_form_errors.html.twig' %}

{% block title %}{{ 'title.reset_password'|trans }}{% endblock %}

{% block body %}

<style>
.newpass-page {
    min-height: 80vh;
    display: flex;
    align-items: center;
    justify-content: center;
}

.newpass-card {
    width: 100%;
    max-width: 480px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26,40,77,0.12);
    padding: 40px;
    position: relative;
}

.newpass-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

.newpass-card h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    text-align: center;
    margin-bottom: 25px;
    color: #1a284d;
}

.confirm-btn {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
}

.confirm-btn:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26,40,77,0.3);
}
</style>

{% include "include/flashes.html.twig" %}

<div class="newpass-page">
    <div class="newpass-card">
        <h1>{{ 'title.choose_paswword'|trans }}</h1>

        {{ form_start(passForm) }}
            {{ form_row(passForm.password) }}
            <button class="confirm-btn">
                <i class="bi bi-shield-lock me-2"></i>
                {{ 'button.confirm'|trans }}
            </button>
        {{ form_end(passForm) }}
    </div>
</div>

{% endblock %}