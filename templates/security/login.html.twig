{% extends 'base.html.twig' %}

{% block title %}{{ 'navigation.login'|trans }}{% endblock %}

{% block body %}
<style>
/* ========================================
   PAGE CONNEXION
   ======================================== */
.login-page {
    min-height: 80vh;
	width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
	margin-top:0px;
}

.login-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

/* Container principal */
.login-container {
    width: 100%;
    max-width: 500px;
    position: relative;
    z-index: 1;
	margin-top:0px;
}

/* Card de connexion - COMPACTE */
.login-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.12);
    padding: 40px 50px;
    position: relative;
    overflow: hidden;
}

.login-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 4px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}
/* Logo / Icône - PLUS PETIT */
.login-icon {
    width: 60px;
    height: 60px;
    background: linear-gradient(135deg, rgba(26, 40, 77, 0.1), rgba(179, 226, 236, 0.2));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px;
}

.login-icon i {
    font-size: 1.5rem;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-clip: text;
}

/* Titre - PLUS COMPACT */
.login-card h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.7rem;
    color: #1a284d;
    text-align: center;
    margin-bottom: 25px;
}

/* Champs de formulaire - RÉDUITS */
.form-group {
    margin-bottom: 18px;
    position: relative;
}

.form-group label {
    display: block;
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1a284d;
    margin-bottom: 8px;
}

.form-group input[type="email"],
.form-group input[type="password"],
.form-group input[type="text"] {
    width: 100%;
    padding: 14px 18px;
    font-size: 0.95rem;
    font-family: 'Outfit', sans-serif;
    color: #333;
    background: #f8fbfc;
    border: 2px solid #e8f4f8;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.form-group input:focus {
    outline: none;
    border-color: #b3e2ec;
    background: white;
    box-shadow: 0 0 0 3px rgba(179, 226, 236, 0.2);
}

.form-group input::placeholder {
    color: #aaa;
}

/* Icône show password */
.form-group .show-password {
    position: absolute;
    right: 18px;
    top: 50px;
    color: #999;
    cursor: pointer;
    font-size: 1.2rem;
    transition: color 0.3s ease;
}

.form-group .show-password:hover {
    color: #1a284d;
}

/* Checkbox Remember me */
.checkbox-group {
    display: flex;
    align-items: center;
    gap: 10px;
    margin-bottom: 25px;
}

.checkbox-group input[type="checkbox"] {
    width: 20px;
    height: 20px;
    accent-color: #1a284d;
    cursor: pointer;
}

.checkbox-group label {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    color: #666;
    cursor: pointer;
    margin: 0;
}

/* Liens */
.login-links {
    text-align: center;
    margin-bottom: 25px;
}

.login-links a {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    color: #2d4a7c;
    text-decoration: none;
    transition: color 0.3s ease;
}

.login-links a:hover {
    color: #1a284d;
    text-decoration: underline;
}

.login-links p {
    color: #666;
    font-size: 0.9rem;
    margin: 10px 0;
}

.login-links p a {
    font-weight: 600;
    color: #1a284d;
}

/* Bouton connexion */
.btn-login {
    width: 100%;
    padding: 14px 25px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border: none;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(26, 40, 77, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
}

.btn-login:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26, 40, 77, 0.4);
}

.btn-login:active {
    transform: translateY(0);
}

/* Séparateur */
.divider {
    display: flex;
    align-items: center;
    margin: 20px 0;
}

.divider::before,
.divider::after {
    content: '';
    flex: 1;
    height: 1px;
    background: #e8f4f8;
}

.divider span {
    padding: 0 15px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.8rem;
    color: #999;
}


/* Message d'erreur */
.alert-error {
    background: rgba(220, 53, 69, 0.1);
    border: 1px solid rgba(220, 53, 69, 0.2);
    color: #dc3545;
    padding: 15px 20px;
    border-radius: 12px;
    margin-bottom: 25px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    display: flex;
    align-items: center;
    gap: 10px;
}

.alert-error i {
    font-size: 1.2rem;
}

/* Message déjà connecté */
.already-logged {
    background: rgba(179, 226, 236, 0.2);
    border: 1px solid rgba(179, 226, 236, 0.4);
    color: #1a284d;
    padding: 15px 20px;
    border-radius: 12px;
    margin-bottom: 25px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    text-align: center;
}

.already-logged a {
    color: #2d4a7c;
    font-weight: 600;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 600px) {
    .login-page {
        padding: 15px;
    }
    
    .login-container {
        max-width: 100%;
    }
    
    .login-card {
        padding: 35px 30px;
        border-radius: 20px;
    }
    
    .login-card h1 {
        font-size: 1.5rem;
        margin-bottom: 20px;
    }
    
    .login-icon {
        width: 55px;
        height: 55px;
        margin-bottom: 15px;
    }
    
    .login-icon i {
        font-size: 1.3rem;
    }
    
    .form-group {
        margin-bottom: 15px;
    }
    
    .form-group input[type="email"],
    .form-group input[type="password"],
    .form-group input[type="text"] {
        padding: 12px 15px;
        font-size: 0.9rem;
    }
    
    .form-group .show-password {
        top: 40px;
        right: 14px;
    }
    
    .btn-login {
        padding: 12px 20px;
        font-size: 0.9rem;
    }
    
    .divider {
        margin: 18px 0;
    }
}

@media (max-width: 400px) {
    .login-card {
        padding: 30px 22px;
    }
    
    .login-card h1 {
        font-size: 1.4rem;
    }
    
    .login-icon {
        width: 50px;
        height: 50px;
    }
    
    .login-icon i {
        font-size: 1.2rem;
    }
    
    .form-group input[type="email"],
    .form-group input[type="password"],
    .form-group input[type="text"] {
        padding: 11px 14px;
    }
    
    .btn-login {
        padding: 11px 18px;
    }
}
</style>

<div class="login-page">
    <div class="login-container">
        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>
        
        <form method="post">
            <div class="login-card">
                {# Icône #}
                <div class="login-icon">
                    <i class="bi bi-person"></i>
                </div>
                
                {# Titre #}
                <h1>{{ 'navigation.login'|trans }}</h1>
                
                {# Erreur #}
                {% if error %}
                    <div class="alert-error">
                        <i class="bi bi-exclamation-circle"></i>
                        {{ error.messageKey|trans(error.messageData, 'security') }}
                    </div>
                {% endif %}
                
                {# Déjà connecté #}
                {% if app.user %}
                    <div class="already-logged">
                        {{ 'button.log_as'|trans }} <strong>{{ app.user.userIdentifier }}</strong>
                        <br>
                        <a href="{{ path('app_logout') }}">{{ 'button.logout'|trans }}</a>
                    </div>
                {% endif %}
                
                {# Champ Email #}
                <div class="form-group">
                    <label for="inputEmail">
                        <i class="bi bi-envelope me-2"></i>Email
                    </label>
                    <input type="email" 
                           value="{{ last_username }}" 
                           name="email" 
                           id="inputEmail" 
                           placeholder="{{ 'form.email_placeholder'|trans}}"
                           autocomplete="email" 
                           required 
                           autofocus>
                </div>
                
                {# Champ Mot de passe #}
                <div class="form-group">
                    <label for="inputPassword">
                        <i class="bi bi-lock me-2"></i>{{ 'form.password'|trans }}
                    </label>
                    <input type="password" 
                           name="password" 
                           id="inputPassword" 
                           placeholder="{{ 'form.password_placeholder'|trans|default('Entrez votre mot de passe') }}"
                           autocomplete="current-password" 
                           required>
                    <i class="bi bi-eye show-password" id="togglePassword" onclick="togglePasswordVisibility()"></i>
                </div>
                
                <input type="hidden" name="_csrf_token" value="{{ csrf_token('authenticate') }}">
                <input type="hidden" id="recaptcha_response" name="recaptcha_response">
                
                {# Remember me #}
                <div class="checkbox-group">
                    <input type="checkbox" name="_remember_me" id="rememberMe">
                    <label for="rememberMe">{{ 'button.remember_me'|trans }}</label>
                </div>
                
                {# Bouton connexion #}
                <button class="btn-login" type="submit">
                    <i class="bi bi-box-arrow-in-right"></i>
                    {{ 'button.login'|trans }}
                </button>
                
                {# Liens #}
                <div class="divider">
                    <span>ou</span>
                </div>
                
                <div class="login-links">
                    <a href="{{ path('forgotten_password') }}">
                        <i class="bi bi-key me-1"></i>{{ 'button.password_forgot'|trans }}
                    </a>
                    <p>
                        {{ 'button.no_account'|trans }}
                        <a href="{{ path('app_register') }}">{{ 'button.register'|trans }}</a>
                    </p>
                </div>
            </div>
        </form>
    </div>
</div>

<script>
function togglePasswordVisibility() {
    const passwordInput = document.getElementById('inputPassword');
    const toggleIcon = document.getElementById('togglePassword');
    
    if (passwordInput.type === 'password') {
        passwordInput.type = 'text';
        toggleIcon.classList.remove('bi-eye');
        toggleIcon.classList.add('bi-eye-slash');
    } else {
        passwordInput.type = 'password';
        toggleIcon.classList.remove('bi-eye-slash');
        toggleIcon.classList.add('bi-eye');
    }
}
</script>

<script src='https://www.google.com/recaptcha/api.js?render="{{ site_key }}'></script>
<script>
grecaptcha.ready(function () {
    grecaptcha.execute('{{ site_key }}', {action: 'login'}).then(function (token) {
        document.getElementById('recaptcha_response').value = token;
    });
});
</script>
{% endblock %}