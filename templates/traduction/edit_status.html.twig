{% extends 'base.html.twig' %}
{% form_theme form 'form/_form_errors.html.twig' %}

{% block title %}Modifier le statut{% endblock %}

{% block body %}

<style>
/* ========================================
   EDIT STATUS PREMIUM
   ======================================== */

.edit-status-page {
    min-height: 80vh;
    padding: 60px 20px;
    display: flex;
    justify-content: center;
}

.edit-status-card {
    width: 100%;
    max-width: 800px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26,40,77,0.1);
    padding: 40px;
    position: relative;
}

.edit-status-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

.edit-status-card h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    color: #1a284d;
    margin-bottom: 25px;
    text-align: center;
}

.form-section {
    margin-top: 25px;
    padding: 20px;
    border-radius: 15px;
    background: rgba(26,40,77,0.03);
}

.form-section-title {
    font-weight: 600;
    margin-bottom: 15px;
    color: #1a284d;
    font-size: 0.95rem;
}

.form-control {
    border-radius: 10px;
    padding: 10px 14px;
}

.form-control:focus {
    border-color: #1a284d;
    box-shadow: 0 0 0 3px rgba(26,40,77,0.1);
}

.btn-save {
    width: 100%;
    padding: 14px;
    border-radius: 12px;
    border: none;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    font-weight: 600;
    transition: all 0.3s ease;
    margin-top: 20px;
}

.btn-save:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26,40,77,0.3);
}

/* Animation smooth */
.fade-section {
    transition: all 0.3s ease;
}
</style>

<div class="edit-status-page">

    <div class="edit-status-card">

        <h1>Statut pour le mot "{{ traduction.wordFR }}"</h1>

        {{ form_start(form) }}

        {# STATUS #}
        <div class="form-group">
            {{ form_row(form.status, {'attr': {'class': 'form-control'}}) }}
        </div>

        {# CHAMPS MODIFICATION #}
        <div id="change-fields" class="form-section fade-section" style="display:none;">
            <div class="form-section-title">Modification du contenu</div>

            {{ form_row(form.wordFR) }}
            {{ form_row(form.wordEN) }}
            {{ form_row(form.singular) }}
            {{ form_row(form.plural) }}
            {{ form_row(form.phoneticSingular) }}
            {{ form_row(form.phoneticPlural) }}
        </div>

        {# JUSTIFICATION #}
        <div id="justification-field" class="form-section fade-section" style="display:none;">
            <div class="form-section-title">Justification</div>
            {{ form_row(form.justification) }}
        </div>

        <button type="submit" class="btn-save">
            <i class="bi bi-check-circle me-2"></i>
            Enregistrer
        </button>

        {{ form_end(form) }}

    </div>

</div>

<script>
document.addEventListener('DOMContentLoaded', function() {

    var statusField = document.getElementById('{{ form.status.vars.id }}');
    var justificationField = document.getElementById('justification-field');
    var changeFields = document.getElementById('change-fields');

    function updateFields() {

        if (statusField.value === '4' || statusField.value === '2') {
            justificationField.style.display = 'block';
        } else {
            justificationField.style.display = 'none';
        }

        if (statusField.value === '4') {
            changeFields.style.display = 'block';
        } else {
            changeFields.style.display = 'none';
        }
    }

    statusField.addEventListener('change', updateFields);

    updateFields();
});
</script>

{% endblock %}