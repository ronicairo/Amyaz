{% extends 'base.html.twig' %}

{% form_theme form 'form/_form_errors.html.twig' %}

{% block title %}Edit Status{% endblock %}

{% block body %}
    <style>
        .edit-status-box {
            margin: 20px auto;
            padding: 20px;
            background: rgba(0, 0, 0, 0.5);
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
            border-radius: 10px;
            max-width: 80%;
        }

        @media(min-width: 768px) {
            .edit-status-box {
                max-width: 60%;
            }
        }

        .edit-status-box h1 {
            color: #fff;
            text-align: center;
            margin-bottom: 20px;
        }

        .edit-status-box .form-group {
            margin-bottom: 20px;
        }

        .edit-status-box .control-label {
            color: #fff;
            font-weight: bold;
        }

        .edit-status-box .form-control {
            background-color: rgba(255, 255, 255, 0.1);
            color: #fff;
            border: 1px solid #03e9f4;
        }

        .edit-status-box .form-control:focus {
            background-color: rgba(255, 255, 255, 0.2);
            border-color: #03e9f4;
        }

        .edit-status-box .form-control::placeholder {
            color: #bbb;
        }

        .edit-status-box .btn-primary {
            background-color: #03e9f4;
            border: none;
            transition: background-color 0.3s;
        }

        .edit-status-box .btn-primary:hover {
            background-color: #029dbb;
        }

        .edit-status-box .btn-primary:focus {
            background-color: #027d94;
        }
    </style>

    <div class="container mt-5">
        <div class="edit-status-box">
            <h1>Statut pour le mot {{ traduction.wordFR }}</h1>

            {{ form_start(form, {'attr': {'class': 'form-horizontal'}}) }}
                <div class="form-group">
                    {{ form_label(form.status, 'Statut', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.status, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.status) }}
                </div>

                <div id="change-fields" class="mt-3" style="display: none;">
                    <div class="form-group">
                        {{ form_label(form.wordFR, 'Mot en français', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.wordFR, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.wordFR) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.wordEN, 'Mot en anglais', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.wordEN, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.wordEN) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.singular, 'Singulier', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.singular, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.singular) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.plural, 'Pluriel', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.plural, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.plural) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phoneticSingular, 'Phonétique singulier', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.phoneticSingular, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.phoneticSingular) }}
                    </div>
                    <div class="form-group">
                        {{ form_label(form.phoneticPlural, 'Phonétique pluriel', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                        <div class="col-sm-10">
                            {{ form_widget(form.phoneticPlural, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        {{ form_errors(form.phoneticPlural) }}
                    </div>
                </div>

                <div id="justification-field" class="form-group mt-3" style="display: none;">
                    {{ form_label(form.justification, 'Justification', {'label_attr': {'class': 'control-label col-sm-2'}}) }}
                    <div class="col-sm-10">
                        {{ form_widget(form.justification, {'attr': {'class': 'form-control'}}) }}
                    </div>
                    {{ form_errors(form.justification) }}
                </div>

                <div class="form-group mt-3">
                    <div class="col-sm-offset-2 col-sm-10">
                        <button type="submit" class="btn btn-primary">Save</button>
                    </div>
                </div>
            {{ form_end(form) }}

            <script>
                document.addEventListener('DOMContentLoaded', function() {
                    var statusField = document.getElementById('{{ form.status.vars.id }}');
                    var justificationField = document.getElementById('justification-field');
                    var changeFields = document.getElementById('change-fields');

                    function updateFields() {
                        if (statusField.value === '4' || statusField.value === '2') {
                            justificationField.style.display = 'block';
                        } else {
                            justificationField.style.display = 'none';
                        }

                        if (statusField.value === '4') {
                            changeFields.style.display = 'block';
                        } else {
                            changeFields.style.display = 'none';
                        }
                    }

                    statusField.addEventListener('change', function() {
                        updateFields();
                    });

                    updateFields();
                });
            </script>
        </div>
    </div>
{% endblock %}
