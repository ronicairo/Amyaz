{% extends 'base.html.twig' %}

{% block title %}Details : "{{ traduction.wordFR }}"{% endblock %}

{% block body %}
    <style>
        .traduction-container {
            margin: 20px auto;
            padding: 20px;
            max-width: 80%;
            background: rgba(0, 0, 0, 0.7);
            border-radius: 10px;
            color: #fff;
            box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
        }

        @media (min-width: 768px) {
            .traduction-container {
                max-width: 60%;
            }
        }

        .traduction-container h1 {
            text-align: center;
            margin-bottom: 30px;
            font-size: 2rem;
        }

        .traduction-container .table th {
            width: 30%;
            color: #fff;
            font-weight: bold;
        }

        .traduction-container .table td {
            color: #dcdcdc;
        }

        .traduction-container .btn-container {
            display: flex;
            justify-content: space-between;
            margin-top: 20px;
        }

        .traduction-container .delete-form {
            margin-top: 20px;
            text-align: center;
        }
    </style>

    <div class="traduction-container">
        <h1>Details : "{{ traduction.wordFR }}"</h1>

        <table class="table">
            <tbody>
                <tr>
                    <th>{{ 'post.french_word'|trans }}</th>
                    <td>{{ traduction.wordFR }}</td>
                </tr>
                <tr>
                    <th>{{ 'post.english_word'|trans }}</th>
                    <td>{{ traduction.wordEN }}</td>
                </tr>
                <tr>
                    <th>{{ 'post.rifain_word'|trans }}</th>
                    <td>{{ traduction.singular }}</td>
                </tr>
                <tr>
                    <th>Origine</th>
                    <td>{{ traduction.origin}}</td>
                </tr>
                 <tr>
                    <th>Racine</th>
                    <td>{{ traduction.racine}}</td>
                </tr>
                 <tr>
                    <th>Exemple</th>
                    <td>{{ traduction.example}}</td>
                </tr>
                <tr>
                    <th>Source</th>
                    <td>{{ traduction.source}}</td>
                </tr>
            </tbody>
        </table>

        <div class="btn-container">
            <a class="d-block mt-4 mx-auto btn btn-outline-light col-5" href="{{ path('app_traduction_index') }}">{{ 'button.back_list'|trans }}</a>
            <a class="d-block mt-4 mx-auto btn btn-outline-light col-5" href="{{ path('app_traduction_edit', {'id': traduction.id}) }}">{{ 'button.edit'|trans }}</a>
        </div>

        <div class="delete-form">
            {{ include('traduction/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
