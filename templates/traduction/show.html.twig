{% extends 'base.html.twig' %}

{% block title %}Details : "{{ traduction.wordFR }}"{% endblock %}

{% block body %}

<style>
/* ========================================
   TRADUCTION DETAILS PAGE
   ======================================== */

.traduction-page {
    min-height: 80vh;
    padding: 60px 20px;
    display: flex;
    justify-content: center;
}

.traduction-card {
    width: 100%;
    max-width: 800px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26,40,77,0.1);
    padding: 40px;
    position: relative;
}

.traduction-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

/* Header */
.traduction-title {
    text-align: center;
    margin-bottom: 35px;
}

.traduction-title h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: #1a284d;
}

.traduction-title span {
    font-size: 1.2rem;
    color: #888;
}

/* Info grid */
.traduction-info {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 15px 25px;
}

.traduction-label {
    font-weight: 600;
    color: #1a284d;
}

.traduction-value {
    color: #555;
}

/* Buttons */
.btn-group-custom {
    display: flex;
    gap: 15px;
    margin-top: 40px;
    flex-wrap: wrap;
}

.btn-back {
    padding: 12px 24px;
    border-radius: 10px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-back:hover {
    transform: translateX(-3px);
    color: white;
}

.btn-edit {
    padding: 12px 24px;
    border-radius: 10px;
    background: rgba(26,40,77,0.1);
    color: #1a284d;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-edit:hover {
    background: #1a284d;
    color: white;
}

.delete-container {
    margin-top: 25px;
}

/* Responsive */
@media (max-width: 768px) {

    .traduction-card {
        padding: 25px;
    }

    .traduction-info {
        grid-template-columns: 1fr;
    }

    .btn-group-custom {
        flex-direction: column;
    }

    .btn-back,
    .btn-edit {
        width: 100%;
        text-align: center;
    }
}
</style>

<div class="traduction-page">

    <div class="traduction-card">

        <div class="traduction-title">
            <h1>"{{ traduction.wordFR }}"</h1>
            <span>{{ traduction.wordEN }}</span>
        </div>

        <div class="traduction-info">

            <div class="traduction-label">{{ 'post.french_word'|trans }}</div>
            <div class="traduction-value">{{ traduction.wordFR }}</div>

            <div class="traduction-label">{{ 'post.english_word'|trans }}</div>
            <div class="traduction-value">{{ traduction.wordEN }}</div>

            <div class="traduction-label">{{ 'post.rifain_word'|trans }}</div>
            <div class="traduction-value">{{ traduction.singular }}</div>

            <div class="traduction-label">Origine</div>
            <div class="traduction-value">{{ traduction.origin }}</div>

            <div class="traduction-label">Racine</div>
            <div class="traduction-value">{{ traduction.racine }}</div>

            <div class="traduction-label">Exemple</div>
            <div class="traduction-value">{{ traduction.example }}</div>

            <div class="traduction-label">Source</div>
            <div class="traduction-value">{{ traduction.source }}</div>

        </div>

        <div class="btn-group-custom">
            <a href="{{ path('app_traduction_index') }}" class="btn-back">
                <i class="bi bi-arrow-left"></i>
                {{ 'button.back_list'|trans }}
            </a>

            <a href="{{ path('app_traduction_edit', {'id': traduction.id}) }}" class="btn-edit">
                <i class="bi bi-pencil"></i>
                {{ 'button.edit'|trans }}
            </a>
        </div>

        <div class="delete-container">
            {{ include('traduction/_delete_form.html.twig') }}
        </div>

    </div>

</div>

{% endblock %}