{% extends 'base.html.twig' %}

{% block title %}
    {{ 'post.list_word'|trans }}
{% endblock %}

{% block body %}

<style>
/* ========================================
   WORD LIST PAGE
   ======================================== */

.word-page {
    min-height: 80vh;
    padding: 60px 20px;
}

.word-container {
    max-width: 1300px;
    margin: 0 auto;
}

.word-header {
    text-align: center;
    margin-bottom: 40px;
}

.word-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2.2rem;
    color: #1a284d;
    margin-bottom: 15px;
}

/* Sort form */
.sort-box {
    margin-bottom: 30px;
}

.sort-select {
    border-radius: 12px;
    padding: 8px 14px;
}

/* Card */
.word-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26,40,77,0.1);
    padding: 30px;
    overflow: hidden;
}

/* Table */
.table thead {
    background: linear-gradient(90deg, #1a284d, #2d4a7c);
    color: white;
}

.table th {
    border: none;
    font-weight: 600;
}

.table td {
    vertical-align: middle;
}

/* Buttons */
.btn-action {
    border-radius: 8px;
    padding: 6px 10px;
    transition: all 0.3s ease;
}

.btn-action:hover {
    transform: translateY(-2px);
}

/* Responsive stacked */
@media (max-width: 768px) {

    table thead {
        display: none;
    }

    table, table tbody, table tr, table td {
        display: block;
        width: 100%;
    }

    table tr {
        background: white;
        margin-bottom: 15px;
        border-radius: 15px;
        box-shadow: 0 5px 20px rgba(0,0,0,0.05);
        padding: 15px;
    }

    table td {
        border: none;
        text-align: left !important;
        padding: 8px 0;
    }

    table td::before {
        content: attr(data-label);
        font-weight: 600;
        display: block;
        color: #1a284d;
        font-size: 0.8rem;
        margin-bottom: 3px;
    }
}
</style>

<div class="word-page">
    <div class="word-container">

        <div class="word-header">
            <h1>{{ 'post.list_word'|trans }}</h1>
        </div>

        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>

        {# SORT #}
        <form method="get" action="{{ path('app_traduction_index') }}" class="sort-box text-center">
            <label for="sort" class="form-label mb-2">
                {{ 'post.sort_by'|trans }}
            </label>
            <br>
            <select name="sort" id="sort" class="form-select w-auto mx-auto sort-select" onchange="this.form.submit()">
                <option value="alphabetical" {% if sort == 'alphabetical' %}selected{% endif %}>
                    {{ 'post.sort_alphabetical'|trans }}
                </option>
                <option value="recent" {% if sort == 'recent' %}selected{% endif %}>
                    {{ 'post.sort_recent'|trans }}
                </option>
                <option value="rifainSingularRecord" {% if sort == 'rifainSingularRecord' %}selected{% endif %}>
                    {{ 'post.sort_rifain_singular'|trans }}
                </option>
            </select>
        </form>

        <div class="word-card table-responsive">
            <table class="table text-center align-middle">
                <thead>
                    <tr>
                        <th>{{ 'post.french_word'|trans }}</th>
                        <th>{{ 'post.rif_singular'|trans }}</th>
                        <th>{{ 'post.rif_plural'|trans }}</th>
                        <th>Origine</th>
                        <th>Racine</th>
                        <th>Example</th>
                        <th>Source</th>
                        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                            <th>Actions</th>
                        {% endif %}
                    </tr>
                </thead>
                <tbody>
                    {% for traduction in pagination %}
                        <tr>
                            <td data-label="{{ 'post.french_word'|trans }}">{{ traduction.wordFR }}</td>
                            <td data-label="{{ 'post.rif_singular'|trans }}">{{ traduction.singular }}</td>
                            <td data-label="{{ 'post.rif_plural'|trans }}">{{ traduction.plural }}</td>
                            <td data-label="Origine">{{ traduction.origin }}</td>
                            <td data-label="Racine">{{ traduction.racine }}</td>
                            <td data-label="Example">{{ traduction.example }}</td>
                            <td data-label="Source">{{ traduction.source }}</td>

                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                                <td data-label="Actions">
                                    <a href="{{ path('app_traduction_show', {'id': traduction.id}) }}"
                                       class="btn btn-outline-primary btn-sm btn-action">
                                        <i class="bi bi-eye"></i>
                                    </a>

                                    <a href="{{ path('app_traduction_edit', {'id': traduction.id}) }}"
                                       class="btn btn-outline-secondary btn-sm btn-action">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                </td>
                            {% endif %}
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="8">{{ 'post.no_found'|trans }}</td>
                        </tr>
                    {% endfor %}
                </tbody>
            </table>
        </div>

        <div class="pagination justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>

    </div>
</div>

{% endblock %}