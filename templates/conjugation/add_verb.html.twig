{% extends 'base.html.twig' %}

{% block title %} Ajout d'un verbe{% endblock %}

{% block body %}
<style>
/* ========================================
   PAGE AJOUT VERBE
   ======================================== */
.verb-form-page {
    min-height: 80vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 40px 20px;
}

.verb-form-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

.verb-form-container {
    width: 100%;
    max-width: 650px;
    position: relative;
    z-index: 1;
}

/* ========================================
   CARD FORMULAIRE
   ======================================== */
.verb-form-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.12);
    overflow: hidden;
    position: relative;
}

.verb-form-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

/* Header */
.verb-form-header {
    background: linear-gradient(135deg, #1a284d 0%, #2d4a7c 100%);
    padding: 30px 40px;
    text-align: center;
    position: relative;
    overflow: hidden;
}

.verb-form-header::after {
    content: '';
    position: absolute;
    top: -50%;
    right: -20%;
    width: 50%;
    height: 200%;
    background: radial-gradient(circle, rgba(179, 226, 236, 0.1) 0%, transparent 70%);
    pointer-events: none;
}

.verb-form-header-icon {
    width: 60px;
    height: 60px;
    background: rgba(255, 255, 255, 0.15);
    border-radius: 16px;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 15px;
}

.verb-form-header-icon i {
    font-size: 1.6rem;
    color: white;
}

.verb-form-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.6rem;
    color: white;
    margin: 0;
    position: relative;
    z-index: 1;
}

.verb-form-header p {
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 10px 0 0;
    position: relative;
    z-index: 1;
}

/* Body */
.verb-form-body {
    padding: 40px;
}

/* ========================================
   SECTIONS
   ======================================== */
.form-section {
    margin-bottom: 30px;
}

.form-section-title {
    display: flex;
    align-items: center;
    gap: 10px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1a284d;
    text-transform: uppercase;
    letter-spacing: 1px;
    margin-bottom: 20px;
    padding-bottom: 10px;
    border-bottom: 2px solid #e8f4f8;
}

.form-section-title i {
    color: #b3e2ec;
}

/* ========================================
   GRILLE DES CHAMPS
   ======================================== */
.form-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 20px;
}

.form-grid.single {
    grid-template-columns: 1fr;
}

.form-group {
    position: relative;
}

.form-group.full-width {
    grid-column: 1 / -1;
}

/* ========================================
   LABELS ET INPUTS
   ======================================== */
.verb-form-card label {
    display: block;
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1a284d;
    margin-bottom: 8px;
}

.verb-form-card input[type="text"] {
    width: 100%;
    padding: 14px 18px;
    font-size: 0.95rem;
    font-family: 'Outfit', sans-serif;
    color: #333;
    background: #f8fbfc;
    border: 2px solid #e8f4f8;
    border-radius: 12px;
    transition: all 0.3s ease;
    box-sizing: border-box;
}

.verb-form-card input[type="text"]:hover {
    border-color: #d0e8f0;
}

.verb-form-card input[type="text"]:focus {
    outline: none;
    border-color: #b3e2ec;
    background: white;
    box-shadow: 0 0 0 4px rgba(179, 226, 236, 0.2);
}

.verb-form-card input[type="text"]::placeholder {
    color: #aaa;
}

/* Champs obligatoires */
.verb-form-card label.required::after {
    content: ' *';
    color: #e94560;
}

/* ========================================
   CHAMPS RACINES (R1-R7)
   ======================================== */
.roots-grid {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    gap: 15px;
}

.root-field label {
    text-align: center;
    font-size: 0.8rem;
}

.root-field input {
    text-align: center;
    padding: 12px 10px !important;
}

/* ========================================
   BOUTON SUBMIT
   ======================================== */
.form-actions {
    margin-top: 35px;
    padding-top: 30px;
    border-top: 2px solid #f0f4f8;
    display: flex;
    gap: 15px;
}

.btn-submit {
    flex: 1;
    padding: 16px 30px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border: none;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(26, 40, 77, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26, 40, 77, 0.4);
}

.btn-submit:active {
    transform: translateY(0);
}

.btn-cancel {
    padding: 16px 30px;
    background: #f8fbfc;
    color: #666;
    border: 2px solid #e8f4f8;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.btn-cancel:hover {
    background: #e8f4f8;
    color: #1a284d;
}

/* ========================================
   INFO BOX
   ======================================== */
.info-box {
    background: rgba(179, 226, 236, 0.15);
    border: 1px solid rgba(179, 226, 236, 0.3);
    border-radius: 12px;
    padding: 15px 20px;
    margin-bottom: 25px;
    display: flex;
    align-items: flex-start;
    gap: 12px;
}

.info-box i {
    color: #1a284d;
    font-size: 1.1rem;
    margin-top: 2px;
}

.info-box p {
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    color: #555;
    margin: 0;
    line-height: 1.5;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 768px) {
    .verb-form-page {
        padding: 20px 15px;
    }
    
    .verb-form-container {
        max-width: 100%;
    }
    
    .verb-form-header {
        padding: 25px 25px;
    }
    
    .verb-form-header h1 {
        font-size: 1.4rem;
    }
    
    .verb-form-body {
        padding: 30px 25px;
    }
    
    .form-grid {
        grid-template-columns: 1fr;
    }
    
    .roots-grid {
        grid-template-columns: repeat(3, 1fr);
    }
    
    .verb-form-card input[type="text"] {
        padding: 12px 15px;
        font-size: 0.9rem;
    }
    
    .form-actions {
        flex-direction: column;
    }
    
    .btn-cancel {
        order: 2;
    }
}

@media (max-width: 480px) {
    .verb-form-header {
        padding: 20px;
    }
    
    .verb-form-header-icon {
        width: 50px;
        height: 50px;
    }
    
    .verb-form-header-icon i {
        font-size: 1.3rem;
    }
    
    .verb-form-header h1 {
        font-size: 1.2rem;
    }
    
    .verb-form-body {
        padding: 25px 20px;
    }
    
    .roots-grid {
        grid-template-columns: repeat(2, 1fr);
    }
    
    .form-section-title {
        font-size: 0.8rem;
    }
}
</style>

<div class="verb-form-page">
    <div class="verb-form-container">
        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>
        
        <div class="verb-form-card">
            {# Header #}
            <div class="verb-form-header">
                <div class="verb-form-header-icon">
                    <i class="bi bi-plus-circle"></i>
                </div>
                <h1>Ajouter un Verbe Rifain</h1>
                <p>Remplissez les informations du verbe à ajouter</p>
            </div>
            
            {# Body #}
            <div class="verb-form-body">
                <form action="{{ path('alimenter_verbes') }}" method="post">
                    
                    {# Info box #}
                    <div class="info-box">
                        <i class="bi bi-info-circle"></i>
                        <p>Les champs marqués d\'un astérisque (*) sont obligatoires.</p>
                    </div>
                    
                    {# Section Verbe #}
                    <div class="form-section">
                        <div class="form-section-title">
                            <i class="bi bi-translate"></i>
                           Informations du verbe
                        </div>
                        
                        <div class="form-grid">
                            <div class="form-group">
                                <label for="verbe_rifain" class="required">Verbe Rifain</label>
                                <input type="text" id="verbe_rifain" name="verbe_rifain" placeholder="ex: awi" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="verbe_francais" class="required">Verbe Français</label>
                                <input type="text" id="verbe_francais" name="verbe_francais" placeholder="ex: apporter" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="verbe_tifinagh" class="required">Verbe en Tifinagh</label>
                                <input type="text" id="verbe_tifinagh" name="verbe_tifinagh" placeholder="ex: ⴰⵡⵉ" required>
                            </div>
                            
                            <div class="form-group">
                                <label for="forme" class="required">Forme</label>
                                <input type="text" id="forme" name="forme" placeholder="ex: 1" required>
                            </div>
                        </div>
                    </div>
                    
                    {# Section Racines #}
                    <div class="form-section">
                        <div class="form-section-title">
                            <i class="bi bi-diagram-3"></i>
                          Racines du verbe
                        </div>
                        
                        <div class="roots-grid">
                            <div class="form-group root-field">
                                <label for="R1" class="required">R1</label>
                                <input type="text" id="R1" name="R1" placeholder="—" required>
                            </div>
                            
                            <div class="form-group root-field">
                                <label for="R2">R2</label>
                                <input type="text" id="R2" name="R2" placeholder="—">
                            </div>
                            
                            <div class="form-group root-field">
                                <label for="R3">R3</label>
                                <input type="text" id="R3" name="R3" placeholder="—">
                            </div>
                            
                            <div class="form-group root-field">
                                <label for="R4">R4</label>
                                <input type="text" id="R4" name="R4" placeholder="—">
                            </div>
                            
                            <div class="form-group root-field">
                                <label for="R5">R5</label>
                                <input type="text" id="R5" name="R5" placeholder="—">
                            </div>
                            
                            <div class="form-group root-field">
                                <label for="R6">R6</label>
                                <input type="text" id="R6" name="R6" placeholder="—">
                            </div>
                            
                            <div class="form-group root-field">
                                <label for="R7">R7</label>
                                <input type="text" id="R7" name="R7" placeholder="—">
                            </div>
                        </div>
                    </div>
                    
                    {# Actions #}
                    <div class="form-actions">
                        <a href="{{ path('app_verbe') }}" class="btn-cancel">
                            <i class="bi bi-x-circle"></i>
                            {{ 'title.cancel'|trans|default('Annuler') }}
                        </a>
                        <button type="submit" class="btn-submit">
                            <i class="bi bi-plus-circle"></i>
                            {{ 'account.show_form_verb'|trans|default('Ajouter le verbe') }}
                        </button>
                    </div>
                    
                    <input type="hidden" name="_token" value="{{ csrf_token('alimenter_verbes') }}">
                </form>
            </div>
        </div>
    </div>
</div>
{% endblock %}