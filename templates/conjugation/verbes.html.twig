/* ========================================
   TABLES DE CONJUGAISON
   ======================================== */
.conjugation-section {
    padding: 0 20px 60px;
}

.conjugation-tables-container {
    max-width: 1100px;
    margin: 0 auto;
}

/* Section titre */
.section-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    color: #1a284d;
    text-align: center;
    margin: 50px 0 30px;
    position: relative;
}

.section-title::after {
    content: '';
    position: absolute;
    bottom: -10px;
    left: 50%;
    transform: translateX(-50%);
    width: 60px;
    height: 3px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
    border-radius: 2px;
}

/* Table container */
.table-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26, 40, 77, 0.08);
    overflow: hidden;
    position: relative;
    margin-bottom: 30px;
}

.table-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

/* Table */
.conjugation-table {
    width: 100%;
    border-collapse: collapse;
    margin: 0;
}

.conjugation-table thead {
    background: linear-gradient(135deg, #1a284d 0%, #2d4a7c 100%);
}

.conjugation-table thead th {
    color: white;
    font-family: 'Outfit', sans-serif;
    font-weight: 600;
    font-size: 0.85rem;
    padding: 18px 12px;
    text-align: center;
    border: none;
    position: relative;
}

.conjugation-table thead th:not(:last-child)::after {
    content: '';
    position: absolute;
    right: 0;
    top: 25%;
    height: 50%;
    width: 1px;
    background: rgba(179, 226, 236, 0.3);
}

.conjugation-table thead th:first-child {
    background: rgba(0, 0, 0, 0.15);
}

.conjugation-table tbody tr {
    transition: all 0.3s ease;
}

.conjugation-table tbody tr:nth-child(even) {
    background: #f8fbfc;
}

.conjugation-table tbody tr:hover {
    background: rgba(179, 226, 236, 0.25);
}

.conjugation-table tbody td {
    padding: 16px 12px;
    text-align: center;
    border: none;
    border-bottom: 1px solid #eef5f7;
    font-family: 'Outfit', sans-serif;
    color: #2d4a7c;
    font-size: 0.95rem;
}

.conjugation-table tbody td:first-child {
    font-weight: 600;
    color: #1a284d;
    background: rgba(26, 40, 77, 0.05);
    font-size: 1rem;
}

.conjugation-table tbody tr:last-child td {
    border-bottom: none;
}

/* ========================================
   TABLES MOBILE
   ======================================== */
.mobile-table-card {
    background: white;
    border-radius: 20px;
    box-shadow: 0 8px 30px rgba(26, 40, 77, 0.08);
    overflow: hidden;
