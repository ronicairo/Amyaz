{% extends 'base.html.twig' %}

{% block title %}{{ category_doc.name }}{% endblock %}

{% block body %}

<style>
/* ========================================
   CATEGORY DETAILS - PREMIUM
   ======================================== */

.category-page {
    min-height: 80vh;
    padding: 60px 20px;
    display: flex;
    justify-content: center;
    animation: fadeInPage 0.4s ease;
}

@keyframes fadeInPage {
    from { opacity: 0; transform: translateY(15px); }
    to { opacity: 1; transform: translateY(0); }
}

.category-card {
    width: 100%;
    max-width: 700px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26,40,77,0.1);
    padding: 40px;
    position: relative;
    overflow: hidden;
}

.category-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
    border-top-left-radius: 24px;
    border-top-right-radius: 24px;
}

/* Header */
.category-title {
    text-align: center;
    margin-bottom: 35px;
}

.category-title h1 {
    font-family: 'Playfair Display', serif;
    font-size: 2rem;
    color: #1a284d;
}

/* Info grid */
.category-info {
    display: grid;
    grid-template-columns: 1fr 2fr;
    gap: 15px 25px;
}

.category-label {
    font-weight: 600;
    color: #1a284d;
}

.category-value {
    color: #555;
}

/* Actions */
.category-actions {
    margin-top: 35px;
    text-align: center;
}

.category-actions a {
    display: inline-block;
    padding: 12px 24px;
    border-radius: 12px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    text-decoration: none;
    font-weight: 600;
    transition: all 0.3s ease;
}

.category-actions a:hover {
    transform: translateY(-2px);
}

/* Delete section */
.delete-section {
    margin-top: 20px;
    text-align: center;
}

.delete-section button {
    padding: 12px 20px;
    border-radius: 10px;
    border: none;
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
    font-weight: 600;
    transition: all 0.3s ease;
}

.delete-section button:hover {
    background: #dc3545;
    color: white;
}

/* Responsive */
@media (max-width: 768px) {
    .category-card {
        padding: 25px;
    }

    .category-info {
        grid-template-columns: 1fr;
    }
}
</style>

<div class="category-page">
    <div class="category-card">

        <div class="category-title">
            <h1>{{ category_doc.name }}</h1>
        </div>

        <div class="category-info">

            <div class="category-label">ID</div>
            <div class="category-value">{{ category_doc.id }}</div>

            <div class="category-label">{{ 'td.name'|trans }}</div>
            <div class="category-value">{{ category_doc.name }}</div>

            <div class="category-label">{{ 'td.create'|trans }}</div>
            <div class="category-value">
                {{ category_doc.createdAt ? category_doc.createdAt|date('Y-m-d H:i') : '-' }}
            </div>

            <div class="category-label">{{ 'td.update'|trans }}</div>
            <div class="category-value">
                {{ category_doc.updatedAt ? category_doc.updatedAt|date('Y-m-d H:i') : '-' }}
            </div>

        </div>

        <div class="delete-section">
            {{ include('category_doc/_delete_form.html.twig') }}
        </div>

        <div class="category-actions">
            <a href="{{ path('category_doc_index') }}">
                ‚Üê {{ 'button.back_list'|trans }}
            </a>
        </div>

    </div>
</div>

{% endblock %}