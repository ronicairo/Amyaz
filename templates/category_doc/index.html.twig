{% extends 'base.html.twig' %}

{% block title %}
	{{ 'category.title'|trans }}
{% endblock %}

{% block body %}
	<style>


		.btn {
			margin: 0 5px; /* Spacing between action buttons */
		}

		.container {
			max-width: 1000px; /* Maximum width of the container */
		}

		.text-center {
			text-align: center; /* Center-align text */
		}

	</style>


    {% include 'include/flashes.html.twig' %}


	<div class="container mt-2">
		<h1 class="text-center mb-4">{{ 'category.title'|trans }}</h1>

		<div class="text-center mt-4">
			<a class="btn btn-dark mb-4" href="{{ path('category_doc_new') }}">{{ 'button.create_new'|trans }}</a>
		</div>
		<div class="table-responsive">
			<table class="table table-striped table-bordered text-center">
				<thead class="thead-dark">
					<tr>
						<th>Id</th>
						<th>Name</th>
						<th>Actions</th>
					</tr>
				</thead>
				<tbody>
					{% for category_doc in category_docs %}
						<tr>
							<td>{{ category_doc.id }}</td>
							<td>{{ category_doc.name }}</td>
						{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
								<td>
									<a class="btn btn-outline-secondary btn-sm" href="{{ path('category_doc_show', {'id': category_doc.id}) }}">
										<i class="bi bi-eye"></i>
									</a>
									<a class="btn btn-outline-dark btn-sm" href="{{ path('category_doc_edit', {'id': category_doc.id}) }}">
										<i class="bi bi-pencil"></i>
									</a>
								</td>
							{% endif %}
						</tr>
					{% else %}
						<tr>
							<td colspan="{% if is_granted('ROLE_ADMIN') %}3{% else %}2{% endif %}" class="text-center">{{ 'p.no_result'|trans }}</td>
						</tr>
					{% endfor %}
				</tbody>
			</table>
		</div>
	</div>

{% endblock %}
