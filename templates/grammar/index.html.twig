{% extends 'base.html.twig' %}

{% block title %}{{ 'grammar.h2'|trans }}{% endblock %}

{% block body %}
<style>
/* ========================================
   PAGE GRAMMAIRE
   ======================================== */
.grammar-page {
    min-height: 80vh;
    padding: 60px 20px;
    position: relative;
}

.grammar-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

.grammar-container {
    max-width: 1200px;
    margin: 0 auto;
    position: relative;
    z-index: 1;
}

/* ========================================
   HEADER
   ======================================== */
.grammar-header {
    text-align: center;
    margin-bottom: 50px;
}

.grammar-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: clamp(2rem, 5vw, 3rem);
    color: #1a284d;
    margin-bottom: 15px;
}

.grammar-header p {
    font-family: 'Outfit', sans-serif;
    font-size: 1.1rem;
    color: #666;
    max-width: 600px;
    margin: 0 auto;
}

/* Bouton créer */
.btn-create {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 14px 30px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border: none;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(26, 40, 77, 0.3);
    margin-top: 20px;
}

.btn-create:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26, 40, 77, 0.4);
    color: white;
}

/* ========================================
   GRILLE DES CARDS
   ======================================== */
.grammar-grid {
    display: grid;
    grid-template-columns: repeat(2, 1fr);
    gap: 30px;
    margin-top: 40px;
}

/* ========================================
   CARD GRAMMAIRE
   ======================================== */
.grammar-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26, 40, 77, 0.1);
    overflow: hidden;
    position: relative;
    transition: all 0.3s ease;
}

.grammar-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

.grammar-card:hover {
    transform: translateY(-5px);
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.15);
}

.grammar-card-body {
    padding: 30px;
}

/* Numéro de fiche */
.grammar-card-number {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: linear-gradient(135deg, rgba(26, 40, 77, 0.1), rgba(179, 226, 236, 0.2));
    border-radius: 10px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    font-weight: 700;
    color: #1a284d;
    margin-bottom: 15px;
}

/* Titre */
.grammar-card-title {
    font-family: 'Playfair Display', serif;
    font-size: 1.4rem;
    color: #1a284d;
    margin-bottom: 12px;
    line-height: 1.3;
}

/* Sous-titre */
.grammar-card-subtitle {
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
    color: #666;
    line-height: 1.6;
    margin-bottom: 25px;
}

/* Actions */
.grammar-card-actions {
    display: flex;
    align-items: center;
    gap: 10px;
    flex-wrap: wrap;
}

.btn-view {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 12px 24px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border: none;
    border-radius: 10px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.9rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-view:hover {
    background: linear-gradient(135deg, #2d4a7c, #3d5a8c);
    color: white;
    transform: translateX(3px);
}

.btn-edit {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(179, 226, 236, 0.2);
    color: #1a284d;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    text-decoration: none;
    transition: all 0.3s ease;
}

.btn-edit:hover {
    background: #b3e2ec;
    color: #1a284d;
}

.btn-delete {
    display: inline-flex;
    align-items: center;
    justify-content: center;
    width: 40px;
    height: 40px;
    background: rgba(220, 53, 69, 0.1);
    color: #dc3545;
    border: none;
    border-radius: 10px;
    font-size: 1rem;
    cursor: pointer;
    transition: all 0.3s ease;
}

.btn-delete:hover {
    background: #dc3545;
    color: white;
}

/* Admin actions groupées */
.admin-actions {
    display: flex;
    gap: 8px;
    margin-left: auto;
}

/* ========================================
   MESSAGE AUCUNE FICHE
   ======================================== */
.no-sheets {
    grid-column: 1 / -1;
    text-align: center;
    padding: 80px 20px;
    background: white;
    border-radius: 24px;
    box-shadow: 0 10px 40px rgba(26, 40, 77, 0.08);
}

.no-sheets-icon {
    width: 80px;
    height: 80px;
    background: linear-gradient(135deg, rgba(26, 40, 77, 0.1), rgba(179, 226, 236, 0.2));
    border-radius: 50%;
    display: flex;
    align-items: center;
    justify-content: center;
    margin: 0 auto 20px;
}

.no-sheets-icon i {
    font-size: 2rem;
    color: #1a284d;
}

.no-sheets h3 {
    font-family: 'Playfair Display', serif;
    font-size: 1.5rem;
    color: #1a284d;
    margin-bottom: 10px;
}

.no-sheets p {
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    color: #666;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 992px) {
    .grammar-grid {
        grid-template-columns: repeat(2, 1fr);
        gap: 25px;
    }
}

@media (max-width: 768px) {
    .grammar-page {
        padding: 40px 15px;
    }
    
    .grammar-header h1 {
        font-size: 1.8rem;
    }
    
    .grammar-grid {
        grid-template-columns: 1fr;
        gap: 20px;
    }
    
    .grammar-card-body {
        padding: 25px;
    }
    
    .grammar-card-title {
        font-size: 1.2rem;
    }
    
    .grammar-card-actions {
        flex-direction: column;
        align-items: flex-start;
    }
    
    .admin-actions {
        margin-left: 0;
        margin-top: 10px;
    }
}

@media (max-width: 480px) {
    .grammar-card-body {
        padding: 20px;
    }
    
    .grammar-card-number {
        width: 35px;
        height: 35px;
        font-size: 0.8rem;
    }
    
    .grammar-card-title {
        font-size: 1.1rem;
    }
    
    .grammar-card-subtitle {
        font-size: 0.9rem;
    }
    
    .btn-view {
        width: 100%;
        justify-content: center;
        padding: 12px 20px;
    }
}
</style>

<div class="grammar-page">
    <div class="grammar-container">
        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>
        
        {# ========== HEADER ========== #}
        <div class="grammar-header">
            <h1>{{ 'grammar.h2'|trans }}</h1>
            <p>{{ 'grammaire.description'|trans|default('Découvrez les fiches de grammaire pour apprendre le rifain.') }}</p>
            
            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                <a href="{{ path('grammarsheet_new') }}" class="btn-create">
                    <i class="bi bi-plus-circle"></i>
                    {{ 'form.create_grammar'|trans|default('Créer une nouvelle fiche') }}
                </a>
            {% endif %}
        </div>
        
        {# ========== GRILLE DES CARDS ========== #}
        <div class="grammar-grid">
            {% for sheet in grammarSheets %}
                <div class="grammar-card">
                    <div class="grammar-card-body">
                        {# Numéro #}
                        <div class="grammar-card-number">{{ loop.index }}</div>
                        
                        {# Titre #}
                        <h2 class="grammar-card-title">
                            {% if app.request.locale == 'en' %}
                                {{ sheet.titleEn|raw }}
                            {% else %}
                                {{ sheet.titleFr|raw }}
                            {% endif %}
                        </h2>
                        
                        {# Sous-titre #}
                        <p class="grammar-card-subtitle">
                            {% if app.request.locale == 'en' %}
                                {{ sheet.subtitleEn|raw }}
                            {% else %}
                                {{ sheet.subtitleFr|raw }}
                            {% endif %}
                        </p>
                        
                        {# Actions #}
                        <div class="grammar-card-actions">
                            <a href="{{ path('grammarsheet_show', {'id': sheet.id}) }}" class="btn-view">
                                <i class="bi bi-eye"></i>
                                {{ 'button.show'|trans|default('Voir') }}
                            </a>
                            
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                                <div class="admin-actions">
                                    <a href="{{ path('grammarsheet_edit', {'id': sheet.id}) }}" class="btn-edit" title="{{ 'button.edit'|trans|default('Modifier') }}">
                                        <i class="bi bi-pencil"></i>
                                    </a>
                                    <form action="{{ path('grammarsheet_delete', {'id': sheet.id}) }}" method="post" onsubmit="return confirm('{{ 'confirm.delete'|trans|default('Êtes-vous sûr de vouloir supprimer cet élément ?') }}');" style="display: inline;">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sheet.id) }}">
                                        <button type="submit" class="btn-delete" title="{{ 'button.delete'|trans|default('Supprimer') }}">
                                            <i class="bi bi-trash3"></i>
                                        </button>
                                    </form>
                                </div>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                {# Aucune fiche #}
                <div class="no-sheets">
                    <div class="no-sheets-icon">
                        <i class="bi bi-journal-x"></i>
                    </div>
                    <h3>{{ 'grammar.no_sheets_title'|trans|default('Aucune fiche disponible') }}</h3>
                    <p>{{ 'grammar.no_sheets_message'|trans|default('Il n\'y a pas encore de fiches de grammaire. Revenez bientôt !') }}</p>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}