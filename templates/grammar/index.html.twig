{% extends 'base.html.twig' %}

{% block title %}{{ 'grammar.h2'|trans }}{% endblock %}

{% block body %}
    <style>
        .grammar-header {
            text-align: center;
        }

        .grammar-container .card {
            background: rgba(255, 255, 255, 0.1);
            border: none;
            border-radius: 10px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.3);
      
        }

        .grammar-container .card-title {
            font-size: 1.5rem;
            font-weight: bold;
            color: #03e9f4;
        }

        .grammar-container .card-text {
            font-size: 1.1rem;

        }

        .grammar-container .btn-dark, 
        .grammar-container .btn-warning, 
        .grammar-container .btn-danger {
            margin-right: 10px;
            font-size: 1rem;
            padding: 8px 16px;
            border-radius: 5px;
            transition: background-color 0.3s;
        }

        .grammar-container .btn-dark {
            background-color: #444;
            border: none;
        }

        .grammar-container .btn-dark:hover {
            background-color: #222;
        }

        .grammar-container .btn-warning {
            background-color: #f0ad4e;
            border: none;
        }

        .grammar-container .btn-warning:hover {
            background-color: #ec971f;
        }

        .grammar-container .btn-danger {
            background-color: #d9534f;
            border: none;
        }

        .grammar-container .btn-danger:hover {
            background-color: #c9302c;
        }

        .grammar-container form {
            display: inline;
        }

        .no-sheets {
            color: #fff;
            text-align: center;
            font-size: 1.2rem;
            margin-top: 20px;
        }
    </style>

    <div class="col-11 mx-auto">
        {% include 'include/flashes.html.twig' %}
    </div>

    <h1 class="grammar-header">{{ 'grammar.h2'|trans }}</h1>

    <div class="container grammar-container">
        {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
            <a href="{{ path('grammarsheet_new') }}" class="btn btn-outline-dark">Cr√©er une nouvelle fiche</a>
        {% endif %}

        <div class="row mt-3">
            {% for sheet in grammarSheets %}
                <div class="col-sm-6 mb-3">
                    <div class="card">
                        <div class="card-body">
                            <h5 class="card-title">
                                {% if app.request.locale == 'en' %}
                                    {{ sheet.titleEn | raw }}
                                {% else %}
                                    {{ sheet.titleFr | raw }}
                                {% endif %}
                            </h5>
                            <p class="card-text">
                                {% if app.request.locale == 'en' %}
                                    {{ sheet.subtitleEn | raw }}
                                {% else %}
                                    {{ sheet.subtitleFr | raw }}
                                {% endif %}
                            </p>
                            <a href="{{ path('grammarsheet_show', {'id': sheet.id}) }}" class="btn btn-dark">Voir</a>

                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                                <a href="{{ path('grammarsheet_edit', {'id': sheet.id}) }}" class="btn btn-warning">Modifier</a>
                                <form action="{{ path('grammarsheet_delete', {'id': sheet.id}) }}" method="post" onsubmit="return confirm('Are you sure you want to delete this item?');">
                                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ sheet.id) }}">
                                    <button type="submit" class="btn btn-danger">Delete</button>
                                </form>
                            {% endif %}
                        </div>
                    </div>
                </div>
            {% else %}
                <p class="no-sheets">Aucune fiche de grammaire disponible.</p>
            {% endfor %}
        </div>
    </div>

{% endblock %}
