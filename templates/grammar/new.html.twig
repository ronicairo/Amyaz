{% extends 'base.html.twig' %}
{% form_theme form 'form/_form_errors.html.twig' %}

{% block title %}{{ 'form.create_grammar'|trans }}{% endblock %}

{% block body %}
<style>
/* ========================================
   PAGE CRÉATION FICHE GRAMMAIRE
   ======================================== */
.grammar-form-page {
    min-height: 80vh;
    width: 100%;
    display: flex;
    align-items: center;
    justify-content: center;
    position: relative;
    padding: 40px 20px;
}

.grammar-form-page::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: radial-gradient(circle at 20% 30%, rgba(26, 40, 77, 0.05) 0%, transparent 50%),
                radial-gradient(circle at 80% 70%, rgba(179, 226, 236, 0.1) 0%, transparent 40%);
    pointer-events: none;
}

.grammar-form-container {
    width: 100%;
    max-width: 800px;
    position: relative;
    z-index: 1;
}

/* ========================================
   CARD FORMULAIRE
   ======================================== */
.grammar-form-card {
    background: white;
    border-radius: 24px;
    box-shadow: 0 15px 50px rgba(26, 40, 77, 0.12);
    overflow: hidden;
    position: relative;
}

.grammar-form-card::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    height: 5px;
    background: linear-gradient(90deg, #1a284d, #b3e2ec);
}

/* Header */
.grammar-form-header {
    background: linear-gradient(135deg, #1a284d 0%, #2d4a7c 100%);
    padding: 30px 40px;
    text-align: center;
}

.grammar-form-header h1 {
    font-family: 'Playfair Display', serif;
    font-size: 1.8rem;
    color: white;
    margin: 0;
}

.grammar-form-header p {
    font-family: 'Outfit', sans-serif;
    font-size: 0.95rem;
    color: rgba(255, 255, 255, 0.7);
    margin: 10px 0 0;
}

/* Body */
.grammar-form-body {
    padding: 40px;
}

/* ========================================
   SECTIONS LANGUE
   ======================================== */
.language-section {
    margin-bottom: 35px;
    padding-bottom: 35px;
    border-bottom: 2px solid #f0f4f8;
}

.language-section:last-of-type {
    margin-bottom: 0;
    padding-bottom: 0;
    border-bottom: none;
}

.language-badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    padding: 8px 16px;
    background: linear-gradient(135deg, rgba(26, 40, 77, 0.1), rgba(179, 226, 236, 0.2));
    border-radius: 20px;
    font-family: 'Outfit', sans-serif;
    font-size: 0.85rem;
    font-weight: 600;
    color: #1a284d;
    margin-bottom: 20px;
}

.language-badge i {
    font-size: 1rem;
}

/* ========================================
   FORMULAIRE STYLISÉ
   ======================================== */
.grammar-form-card form {
    width: 100%;
}

.form-group {
    margin-bottom: 20px;
}

.grammar-form-card form label,
.grammar-form-card form .form-label {
    display: block !important;
    font-family: 'Outfit', sans-serif !important;
    font-size: 0.9rem !important;
    font-weight: 600 !important;
    color: #1a284d !important;
    margin-bottom: 10px !important;
}

.grammar-form-card form input[type="text"],
.grammar-form-card form input[type="email"],
.grammar-form-card form textarea,
.grammar-form-card form select,
.grammar-form-card form .form-control {
    width: 100% !important;
    padding: 14px 18px !important;
    font-size: 0.95rem !important;
    font-family: 'Outfit', sans-serif !important;
    color: #333 !important;
    background: #f8fbfc !important;
    border: 2px solid #e8f4f8 !important;
    border-radius: 12px !important;
    transition: all 0.3s ease !important;
    box-sizing: border-box !important;
}

.grammar-form-card form input:focus,
.grammar-form-card form textarea:focus,
.grammar-form-card form select:focus,
.grammar-form-card form .form-control:focus {
    outline: none !important;
    border-color: #b3e2ec !important;
    background: white !important;
    box-shadow: 0 0 0 4px rgba(179, 226, 236, 0.2) !important;
}

.grammar-form-card form input::placeholder,
.grammar-form-card form textarea::placeholder {
    color: #aaa !important;
}

/* Textarea */
.grammar-form-card form textarea {
    min-height: 150px !important;
    resize: vertical !important;
}

/* Erreurs */
.grammar-form-card form .invalid-feedback,
.grammar-form-card form .form-error-message,
.grammar-form-card form .help-block {
    color: #dc3545 !important;
    font-family: 'Outfit', sans-serif !important;
    font-size: 0.8rem !important;
    margin-top: 8px !important;
}

.grammar-form-card form .is-invalid,
.grammar-form-card form input.is-invalid,
.grammar-form-card form textarea.is-invalid {
    border-color: #dc3545 !important;
    background: rgba(220, 53, 69, 0.05) !important;
}

/* ========================================
   BOUTONS
   ======================================== */
.form-actions {
    display: flex;
    gap: 15px;
    margin-top: 30px;
    padding-top: 30px;
    border-top: 2px solid #f0f4f8;
}

.btn-submit {
    flex: 1;
    padding: 16px 30px;
    background: linear-gradient(135deg, #1a284d, #2d4a7c);
    color: white;
    border: none;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    cursor: pointer;
    transition: all 0.3s ease;
    box-shadow: 0 4px 15px rgba(26, 40, 77, 0.3);
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.btn-submit:hover {
    transform: translateY(-2px);
    box-shadow: 0 6px 25px rgba(26, 40, 77, 0.4);
}

.btn-cancel {
    padding: 16px 30px;
    background: #f8fbfc;
    color: #666;
    border: 2px solid #e8f4f8;
    border-radius: 12px;
    font-family: 'Outfit', sans-serif;
    font-size: 1rem;
    font-weight: 600;
    text-decoration: none;
    transition: all 0.3s ease;
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 10px;
}

.btn-cancel:hover {
    background: #e8f4f8;
    color: #1a284d;
}

/* ========================================
   RESPONSIVE
   ======================================== */
@media (max-width: 768px) {
    .grammar-form-page {
        padding: 20px 15px;
    }
    
    .grammar-form-container {
        max-width: 100%;
    }
    
    .grammar-form-header {
        padding: 25px 25px;
    }
    
    .grammar-form-header h1 {
        font-size: 1.5rem;
    }
    
    .grammar-form-body {
        padding: 30px 25px;
    }
    
    .grammar-form-card form input[type="text"],
    .grammar-form-card form textarea,
    .grammar-form-card form .form-control {
        padding: 12px 15px !important;
        font-size: 0.9rem !important;
    }
    
    .form-actions {
        flex-direction: column;
    }
    
    .btn-cancel {
        order: 2;
    }
}

@media (max-width: 480px) {
    .grammar-form-header {
        padding: 20px;
    }
    
    .grammar-form-header h1 {
        font-size: 1.3rem;
    }
    
    .grammar-form-body {
        padding: 25px 20px;
    }
    
    .language-badge {
        font-size: 0.8rem;
        padding: 6px 12px;
    }
}
</style>

<div class="grammar-form-page">
    <div class="grammar-form-container">
        <div class="col-11 mx-auto mb-3">
            {% include 'include/flashes.html.twig' %}
        </div>
        
        <div class="grammar-form-card">
            {# Header #}
            <div class="grammar-form-header">
                <h1>{{ 'form.create_grammar'|trans }}</h1>
               
            </div>
            
            {# Body #}
            <div class="grammar-form-body">
                {{ form_start(form) }}
                
                {# Section Français #}
                <div class="language-section">
                    <div class="language-badge">
                        <i class="bi bi-flag"></i>
                        Français
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.titleFr, 'Titre') }}
                        {{ form_widget(form.titleFr, {'attr': {'placeholder': 'Entrez le titre en français'}}) }}
                        {{ form_errors(form.titleFr) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.subtitleFr, 'Sous-titre') }}
                        {{ form_widget(form.subtitleFr, {'attr': {'placeholder': 'Entrez le sous-titre en français'}}) }}
                        {{ form_errors(form.subtitleFr) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.contentFr, 'Contenu') }}
                        {{ form_widget(form.contentFr, {'attr': {'placeholder': 'Entrez le contenu en français', 'rows': 6}}) }}
                        {{ form_errors(form.contentFr) }}
                    </div>
                </div>
                
                {# Section Anglais #}
                <div class="language-section">
                    <div class="language-badge">
                        <i class="bi bi-globe"></i>
                        English
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.titleEn, 'Title') }}
                        {{ form_widget(form.titleEn, {'attr': {'placeholder': 'Enter the title in English'}}) }}
                        {{ form_errors(form.titleEn) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.subtitleEn, 'Subtitle') }}
                        {{ form_widget(form.subtitleEn, {'attr': {'placeholder': 'Enter the subtitle in English'}}) }}
                        {{ form_errors(form.subtitleEn) }}
                    </div>
                    
                    <div class="form-group">
                        {{ form_label(form.contentEn, 'Content') }}
                        {{ form_widget(form.contentEn, {'attr': {'placeholder': 'Enter the content in English', 'rows': 6}}) }}
                        {{ form_errors(form.contentEn) }}
                    </div>
                </div>
                
                {# Actions #}
                <div class="form-actions">
                    <a href="{{ path('grammar_index') }}" class="btn-cancel">
                        <i class="bi bi-x-circle"></i>
                        {{ 'title.cancel'|trans|default('Annuler') }}
                    </a>
                    <button type="submit" class="btn-submit">
                        <i class="bi bi-check-circle"></i>
                        {{ 'button.create_new'|trans|default('Créer la fiche') }}
                    </button>
                </div>
                
                {{ form_end(form) }}
            </div>
        </div>
    </div>
</div>
{% endblock %}