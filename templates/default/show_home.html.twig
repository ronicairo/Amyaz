{% extends 'base.html.twig' %}

{% form_theme form 'form/_form_errors.html.twig' %}
{% form_theme formNews 'form/_form_errors.html.twig' %}

{% block title %}
	{{ 'meta.title'|trans }}
{% endblock %}

{% block body %}

	<main>
		<div class="col-11 mx-auto">
			{% include 'include/flashes.html.twig' %}
		</div>


	{#--------------- MESSAGE ACCUEIL -----------------------#}
<div class="welcome-section">
    <h1 class="dynamic-font-size">
        {{ 'home.welcome_message'|trans|raw }}
    </h1>
    <h3 class="tifinagh-title">ⴰⵎⴰⵡⴰⵍ ⵙ ⵜⵎⴰⵣⵉⵖⵜ</h3>
</div>


		{#--------------- BARRE DE RECHERCHE -----------------------#}
		<div class="barrederecherche">
			<form id="searchForm" method="GET" action="{{ path('show_home') }}" class="search-form">
				<div style="position: relative;">
					<select name="lang" id="lang">
						{% if app.request.locale == 'en' %}
							<option value="en-rif" {% if app.request.query.get('lang') == 'en-rif' %} selected {% endif %}>EN - RIF</option>
							<option value="rif-en" {% if app.request.query.get('lang') == 'rif-en' %} selected {% endif %}>RIF - EN</option>
						{% else %}
							<option value="fr-rif" {% if app.request.query.get('lang') == 'fr-rif' %} selected {% endif %}>FR - RIF</option>
							<option value="rif-fr" {% if app.request.query.get('lang') == 'rif-fr' %} selected {% endif %}>RIF - FR</option>
						{% endif %}
					</select>


					<input type="hidden" id="searchType" value="dictionary">
					<input type="text" name="q" id="search-input" class="autocomplete-input" autocomplete="off" placeholder="{{ 'home.search_bar'|trans }}..." maxlength="60" value="{{ sanitizedSearchTerm|raw }}" required>
					<button type="button" class="keyboard-icon" id="toggle-keyboard">
						<i class="bi bi-keyboard"></i>
					</button>
					<div class="rifain-characters" id="rifain-characters">
						<span>ɛ</span>
						<span>ḍ</span>
						<span>ṛ</span>
						<span>ṣ</span>
						<span>ḥ</span>
						<span>ɣ</span>
						<span>ǧ</span>
						<span>ẓ</span>
						<span>ṭ</span>
						<span>ř</span>
						<span>č</span>
					</div>
					<button type="submit" class="search-button">
						<i class="bi bi-search"></i>
					</button>
				</div>
			</form>
		</div>
		{% if error %}
			<div style="color:#F26766;" class="mt-2 error-message text-center">{{ error }}</div>
		{% endif %}



{#--------------- NAVIGATION ALPHABÉTIQUE -----------------------#}
<section class="alphabet-nav-section">
    <div class="container">
        <h2>{{ 'home.browse_dictionary'|trans }}</h2>
        <div class="alphabet-nav-home">
            {% set alphabet = 'abcdefghijklmnopqrstuvwxyz'|split('') %}
            {% for char in alphabet %}
                {% set isClickable = char in availableLetters %}
                <a href="{{ isClickable ? path('show_home', {'letter': char}) : '#' }}" 
                   class="alphabet-letter 
                          {% if selectedLetter is defined and selectedLetter == char %}active{% endif %}
                          {% if not isClickable %}disabled{% endif %}">
                    {{ char|upper }}
                </a>
            {% endfor %}
        </div>
    </div>
</section>

	{#--------------- CARD -----------------------#}
{% if traductions is not empty %}
    <h4 style="text-align: center; margin-top: 30px; color:#000000 !important;">
        {% if searchType is defined and searchType == 'letter' %}
            {{ 'home.results_for_letter'|trans({'%letter%': selectedLetter|upper})|default('Résultats pour la lettre ' ~ selectedLetter|upper) }}
        {% else %}
            {{ 'home.search_results'|trans }}
        {% endif %}
    </h4>
    <div class="card-container">
        {% for traduction in pagination %}
                <div class="custom-card">
           {% if traduction.requestedBy is not null and not (traduction.requestedBy.roles is same as([]) or 'ROLE_ADMIN' in traduction.requestedBy.roles or 'ROLE_MODERATOR' in traduction.requestedBy.roles) %}
                    <div class="added-by-badge">
                        {% if traduction.requestedBy.picture %}
                            <img src="{{ asset('uploads/profile/' ~ traduction.requestedBy.picture) }}" alt="Photo de profil">
                        {% else %}
                            <img src="{{ asset('uploads/profile/default_profile_picture.jpg') }}" alt="Photo de profil">
                        {% endif %}
                        <span>{{ traduction.requestedBy.username }}</span>
                    </div>
                {% endif %}
                
                <div class="card-body">
                    {# Déterminer la langue d'affichage #}
                    {% set currentLang = app.request.query.get('lang')|default(langOption) %}
                    {% set grammar = currentLang in ['fr-rif', 'rif-fr'] ? traduction.grammarFR : traduction.grammarEN %}
                    
                    {# GRAMMAIRE + ACTIONS (DELETE, EDIT, FAVORI) #}
                    <p class="card-text">
                        <span class="grammar-label">{{ grammar }}</span>
                        
                        <span class="card-actions">
                            {# Bouton Supprimer #}
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                                <button type="button" class="action-icon action-delete" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal{{ traduction.id }}" title="{{ 'button.delete'|trans|default('Supprimer') }}">
                                    <i class="bi bi-trash3"></i>
                                </button>
                            {% endif %}
                            
                            {# Bouton Edit #}
                            {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                                <a href="{{ path('app_traduction_edit', {'id': traduction.id}) }}" class="action-icon action-edit" title="{{ 'button.edit'|trans|default('Modifier') }}">
                                    <i class="bi bi-pencil"></i>
                                </a>
                            {% endif %}
                            
                            {# Icône favori #}
                            {% set isFavorite = false %}
                            {% for favorite in favorites %}
                                {% if favorite.getTraduction() is not null and favorite.getTraduction().id == traduction.id %}
                                    {% set isFavorite = true %}
                                {% endif %}
                            {% endfor %}
                            <span class="action-icon action-favorite" data-id="{{ traduction.id }}" title="{{ 'button.favorite'|trans|default('Favori') }}">
                                <i class="bi bi-star-fill {% if isFavorite %}text-warning{% endif %}"></i>
                            </span>
                        </span>
                    </p>
                    
                    <h5 class="card-title">
                        {% if currentLang == 'fr-rif' %}
                            {{ traduction.wordFR }}
                        {% elseif currentLang in ['rif-fr', 'rif-en'] %}
                            {% if traduction.plural %}
                                <span>
                                    {{ 'home.singular'|trans }}: {{ traduction.singular }}
                                    {% if traduction.hasRifainSingularRecord %}
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                            <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}" class="audio-trigger" data-audio-url="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}">
                                                <i class="fa-solid fa-volume-high recorder-player"></i>
                                            </a>
                                        {% else %}
                                            <a href="#" class="audio-trigger" onclick="alert('Veuillez vous connecter pour accéder à cette fonctionnalité.'); return false;">
                                                <i class="fa-solid fa-volume-high recorder-player"></i>
                                            </a>
                                        {% endif %}
                                    {% endif %}
                                </span>
                                <br>
                                <span style="margin-top: 10px; display: block;">
                                    {{ 'home.plural'|trans }}: {{ traduction.plural }}
                                    {% if traduction.hasRifainPluralRecord %}
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                            <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainPluralRecord' }) }}" class="audio-trigger" data-audio-url="{{ path('audio_serve', { id: traduction.id, field: 'rifainPluralRecord' }) }}">
                                                <i class="fa-solid fa-volume-high recorder-player"></i>
                                            </a>
                                        {% else %}
                                            <a href="#" class="audio-trigger" onclick="alert('Veuillez vous connecter pour accéder à cette fonctionnalité.'); return false;">
                                                <i class="fa-solid fa-volume-high recorder-player"></i>
                                            </a>
                                        {% endif %}
                                    {% endif %}
                                </span>
                            {% else %}
                                <span>{{ traduction.singular }}
                                    {% if traduction.hasRifainSingularRecord %}
                                        {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                            <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}" class="audio-trigger" data-audio-url="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}">
                                                <i class="fa-solid fa-volume-high recorder-player"></i>
                                            </a>
                                        {% else %}
                                            <a href="#" class="audio-trigger" onclick="alert('Veuillez vous connecter pour accéder à cette fonctionnalité.'); return false;">
                                                <i class="fa-solid fa-volume-high recorder-player"></i>
                                            </a>
                                        {% endif %}
                                    {% endif %}
                                </span>
                            {% endif %}
                        {% elseif currentLang in ['en-rif'] %}
                            {{ traduction.wordEN }}
                        {% else %}
                            {# Affichage par défaut pour recherche par lettre #}
                            {{ traduction.wordFR }}
                        {% endif %}
                    </h5>
                    
                    <h6 class="card-subtitle mb-2" style="color: #dec5a5;">
                        <div class="switchable-content" id="content-{{ traduction.id }}">
                            {# CONTENU LATIN (par défaut) #}
                            <div class="content-latin">
                                <span style="margin-top: 10px; display: block; text-transform: lowercase; font-size: 20px;">
                                    {% if currentLang == 'fr-rif' or (searchType is defined and searchType == 'letter') %}
                                        {% if traduction.plural %}
                                            <span>
                                                {{ 'home.singular'|trans }}: {{ traduction.singular }}
                                                {% if traduction.hasRifainSingularRecord %}
                                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                        <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}" class="audio-trigger" data-audio-url="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}">
                                                            <i class="fa-solid fa-volume-high recorder-player"></i>
                                                        </a>
                                                    {% else %}
                                                        <a href="#" class="audio-trigger" onclick="alert('Veuillez vous connecter pour accéder à cette fonctionnalité.'); return false;">
                                                            <i class="fa-solid fa-volume-high recorder-player"></i>
                                                        </a>
                                                    {% endif %}
                                                {% endif %}
                                            </span>
                                            <br>
                                            <span style="margin-top: 10px; display: block;">
                                                {{ 'home.plural'|trans }}: {{ traduction.plural }}
                                                {% if traduction.hasRifainPluralRecord %}
                                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                        <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainPluralRecord' }) }}" class="audio-trigger" data-audio-url="{{ path('audio_serve', { id: traduction.id, field: 'rifainPluralRecord' }) }}">
                                                            <i class="fa-solid fa-volume-high recorder-player"></i>
                                                        </a>
                                                    {% else %}
                                                        <a href="#" class="audio-trigger" onclick="alert('Veuillez vous connecter pour accéder à cette fonctionnalité.'); return false;">
                                                            <i class="fa-solid fa-volume-high recorder-player"></i>
                                                        </a>
                                                    {% endif %}
                                                {% endif %}
                                            </span>
                                        {% elseif traduction.singular %}
                                            <span style="margin-top: 20px; display: block;">
                                                {{ traduction.singular }}
                                                {% if traduction.hasRifainSingularRecord %}
                                                    {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                        <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}" class="audio-trigger" data-audio-url="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}">
                                                            <i class="fa-solid fa-volume-high recorder-player"></i>
                                                        </a>
                                                    {% else %}
                                                        <a href="#" class="audio-trigger" onclick="alert('Veuillez vous connecter pour accéder à cette fonctionnalité.'); return false;">
                                                            <i class="fa-solid fa-volume-high recorder-player"></i>
                                                        </a>
                                                    {% endif %}
                                                {% endif %}
                                            </span>
                                        {% endif %}
                                    {% elseif currentLang == 'rif-fr' %}
                                        {{ traduction.wordFR }}
                                    {% elseif currentLang == 'en-rif' %}
                                        {% if traduction.plural %}
                                            <span>{{ 'home.singular'|trans }}: {{ traduction.singular }}</span>
                                            <br>
                                            <span style="margin-top: 10px; display: block;">{{ 'home.plural'|trans }}: {{ traduction.plural }}</span>
                                        {% elseif traduction.singular %}
                                            <span style="margin-top: 20px; display: block;">{{ traduction.singular }}</span>
                                        {% endif %}
                                    {% elseif currentLang == 'rif-en' %}
                                        {{ traduction.wordEN }}
                                    {% endif %}
                                </span>
                            </div>

                            {# CONTENU TIFINAGH (caché par défaut) #}
                            {% if traduction.phoneticSingular %}
                                <div class="content-tifinagh">
                                    <span style="margin-top: 10px; display: block; text-transform: lowercase; font-size: 20px;">
                                        {% if traduction.phoneticPlural %}
                                            <span>{{ 'home.tifinagh_singular'|trans }}: {{ traduction.phoneticSingular }}</span>
                                            <br>
                                            <span style="margin-top: 10px; display: block;">{{ 'home.tifinagh_plural'|trans }}: {{ traduction.phoneticPlural }}</span>
                                        {% else %}
                                            <span style="margin-top: 20px; display: block;">{{ 'home.tifinagh_verb'|trans }}: {{ traduction.phoneticSingular }}</span>
                                        {% endif %}
                                    </span>
                                </div>
                            {% endif %}
                        </div>
            
                    </h6>
                    
                    {# BOUTON TOGGLE TIFINAGH/LATIN #}
                    {% if traduction.phoneticSingular %}
                        <button type="button" class="tifinagh-toggle" data-target="content-{{ traduction.id }}" title="Voir en Tifinagh">
                            <span class="icon-tifinagh">ⵣ</span>
                            <span class="icon-latin">Aa</span>
                        </button>
                    {% endif %}

                    {#--------------- MODAL INFO -----------------------#}
                    {% if traduction.source is not empty or traduction.origin is not empty or traduction.example is not empty or traduction.racine is not empty %}
                        <button type="button" class="btn btn-outline-info btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#infoModal{{ traduction.id }}">
                            <i class="bi bi-info-circle"></i>
                        </button>
                    {% endif %}

                </div>
            </div>

            {#--------------- MODAL INFO -----------------------#}
            {% if traduction.source is not empty or traduction.origin is not empty or traduction.example is not empty or traduction.racine is not empty %}
                <div class="modal fade" id="infoModal{{ traduction.id }}" tabindex="-1" aria-labelledby="infoModalLabel{{ traduction.id }}" aria-hidden="true">
                    <div class="modal-dialog modal-dialog-scrollable modal-sm modal-dialog-centered">
                        <div class="modal-content modal-information">
                            <div class="modal-header">
                                <h5 class="modal-title" id="infoModalLabel{{ traduction.id }}">
                                    <i class="bi bi-info-circle-fill me-2"></i>
                                    {{ 'Informations sur la traduction'|trans }}
                                </h5>
                                <button type="button" class="btn-close btn-sm" data-bs-dismiss="modal" aria-label="{{ 'Fermer'|trans }}"></button>
                            </div>
                            <div class="modal-body">
                                <ul class="list-group list-group-flush small">
                                    {% if traduction.origin %}
                                        <li class="list-group-item">
                                            <i class="bi bi-geo-alt-fill me-2"></i>
                                            <strong>{{ 'Origine'|trans }}:</strong>
                                            {{ traduction.origin|e }}
                                        </li>
                                    {% endif %}
                                    {% if traduction.racine %}
                                        <li class="list-group-item">
                                            <i class="bi bi-diagram-3-fill me-2"></i>
                                            <strong>{{ 'Racine'|trans }}:</strong>
                                            {{ traduction.racine|e }}
                                        </li>
                                    {% endif %}
                                    {% if traduction.example %}
                                        <li class="list-group-item">
                                            <i class="bi bi-chat-left-text-fill me-2"></i>
                                            <strong>{{ 'Exemple'|trans }}:</strong>
                                            {{ traduction.example|e }}
                                        </li>
                                    {% endif %}
                                    {% if traduction.source %}
                                        <li class="list-group-item">
                                            <i class="bi bi-globe-americas me-2"></i>
                                            <strong>{{ 'Source'|trans }}:</strong>
                                            {{ traduction.source|e }}
                                        </li>
                                    {% endif %}
                                </ul>
                            </div>
                            <div class="modal-footer pt-0">
                                <button type="button" class="btn btn-outline-light btn-sm" data-bs-dismiss="modal">
                                    <i class="bi bi-x-circle"></i>
                                    {{ 'Fermer'|trans }}
                                </button>
                            </div>
                        </div>
                    </div>
                </div>
            {% endif %}

            <!-- Confirmation suppression traduction -->
            <div class="modal fade" id="confirmDeleteModal{{ traduction.id }}" tabindex="-1" aria-labelledby="confirmDeleteModalLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h5 class="modal-title" id="confirmDeleteModalLabel">Confirmation de suppression</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            Êtes-vous sûr de vouloir supprimer cette traduction ?
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Annuler</button>
                            <form action="{{ path('app_traduction_delete', {'id': traduction.id}) }}" method="post">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ traduction.id) }}">
                                <button type="submit" class="btn btn-danger">Supprimer</button>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        {% endfor %}

        {% if app.session.flashBag.has('success') %}
            <div class="alert alert-success" role="alert">
                {{ app.session.flashBag.get('success')[0] }}
            </div>
        {% endif %}

    </div>
    <div id="pagination-container" class="pagination justify-content-center mt-4">
        {{ knp_pagination_render(pagination) }}
    </div>

{% elseif searchType is defined and searchType == 'letter' and traductions is empty %}
    {# Aucun résultat pour la lettre sélectionnée #}
    <div class="alert alert-warning text-center mt-4 mx-auto" style="max-width: 500px;">
        <i class="bi bi-exclamation-triangle me-2"></i>
        {{ 'home.no_words_for_letter'|trans({'%letter%': selectedLetter|upper})|default('Aucun mot trouvé pour la lettre ' ~ selectedLetter|upper) }}
        <div class="mt-3">
            <a href="{{ path('show_home') }}" class="btn btn-outline-primary btn-sm">
                <i class="bi bi-arrow-left"></i> {{ 'home.back_to_home'|trans|default('Retour') }}
            </a>
        </div>
    </div>

{% elseif traductions is empty and app.request.query.get('q') is not null %}
    {% if is_granted('ROLE_USER') %}
        <p class="mt-2" style="text-align: center;">{{ 'home.no_results_logged_in'|trans({'%path_traduction_new%': path('app_traduction_new')})|raw }}</p>
    {% else %}
        <p class="mt-2" style="text-align: center;">{{ 'home.no_results_guest'|trans({'%path_app_login%': path('app_login')})|raw }}</p>
    {% endif %}
{% endif %}



{#--------------- SECTIONS ALPHABET + QUIZZ CÔTE À CÔTE -----------------------#}
<div class="dual-section reveal reveal-left">
    
    {#--------------- ALPHABET -----------------------#}
    <section class="alphabet-section">
        <div class="alphabet-box">
                <img src="/img/abc.png" alt="Alphabet Icon" style="width: 10vh; margin: 20px auto 20px auto; display: block;">
            <h2>{{ 'home.learn_alphabet'|trans }}</h2>
            <p>{{ 'home.alphabet_description'|trans }}</p>
            <div class="alphabet-buttons">
                <a href="{{ path('berbere_latin') }}" class="btn-alphabet btn-alphabet-primary">
                    <i class="bi bi-fonts"></i>
                    {{ 'home.latin_berber'|trans }}
                </a>
                <a href="{{ path('berbere_traditionnel') }}" class="btn-alphabet btn-alphabet-outline">
                    <i class="bi bi-type"></i>
                    {{ 'home.tifinagh'|trans }}
                </a>
            </div>
        </div>
    </section>
    
    {#--------------- QUIZZ -----------------------#}
    {% include 'include/_quizz_tifinagh.html.twig' with {
        'quizzTitle': 'Testez vos connaissances !'
    } %}
    
</div>

{#--------------- MOT DU JOUR + GRAMMAIRE (CÔTE À CÔTE) -----------------------#}
<div class="word-grammar-section reveal reveal-right">

    {#--------------- MOT DU JOUR -----------------------#}
<div class="worday-section">
    <div class="worday">
        <div class="worday-content">
            {# Compteur de mots - ENJOLIVÉ avec CountUp #}
            <div class="word-counter-wrapper">
                <div class="word-counter-card">
                    <div class="counter-icon">
                        <i class="bi bi-book"></i>
                    </div>
                    <div class="counter-content">
                        <span class="counter-number" id="wordCount">0</span>
                        <span class="counter-label">{{ 'post.countword'|trans }} {{ 'post.countword2'|trans }}</span>
                    </div>
                    <div class="counter-decoration"></div>
                </div>
            </div>
            
            {# Titre #}
            <h3 class="worday-title">{{ 'post.worday'|trans }}</h3>
            
            {# Contenu du mot du jour #}
            <div class="worday-word-content">
                {% if wordOfTheDay %}
                    {% if app.request.locale == 'fr' %}
                        <p class="grammar-tag">{{ wordOfTheDay.grammarFR }}</p>
                        <p class="word-translation">{{ wordOfTheDay.wordFR }}</p>
                    {% else %}
                        <p class="grammar-tag">{{ wordOfTheDay.grammarEN }}</p>
                        <p class="word-translation">{{ wordOfTheDay.wordEN }}</p>
                    {% endif %}
                    <h2 class="word-main">{{ wordOfTheDay.singular }}</h2>
                    {% if wordOfTheDay.phoneticSingular %}
                        <p class="word-tifinagh">{{ wordOfTheDay.phoneticSingular }}</p>
                    {% endif %}
                {% else %}
                    <p class="no-word">{{ 'post.no_worday'|trans }}</p>
                {% endif %}
            </div>
        </div>
    </div>
</div>
    {#--------------- GRAMMAIRE -----------------------#}
<section class="grammar-section">
    <div class="grammar-card">
        <div class="grammar-content">

            <a href="{{ path('grammar') }}" style="color: #212529; text-decoration:none;">
                <h2 class="text-body-emphasis">{{ 'home.grammaire_guide'|trans }}</h2>
            </a>

            <p class="lead mb-4">{{ 'home.grammaire_guide_sous_titre'|trans }}</p>

            <div id="grammarCarousel" class="carousel slide w-100" data-bs-ride="carousel">
                <div class="carousel-inner">
                    {% for sheet in grammarSheets %}
                        <div class="carousel-item {% if loop.first %}active{% endif %}">
                            <div class="d-flex justify-content-center">
                                <button onclick="window.location.href='{{ path('grammarsheet_show', {'id': sheet.id}) }}'"
                                        style="background: linear-gradient(135deg, #1a1a2e 0%, #16213e 50%, #0f3460 100%) !important; border: none; padding: 10px 20px; border-radius: 20px; color: white; font-weight: bold;" type="button">
                                    {% if app.request.locale == 'en' %}
                                        {{ sheet.titleEn|striptags }}
                                    {% else %}
                                        {{ sheet.titleFr|striptags }}
                                    {% endif %}
                                </button>
                            </div>
                        </div>
                    {% endfor %}
                </div>

                <button class="carousel-control-prev no-border" type="button" data-bs-target="#grammarCarousel" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                </button>
                <button class="carousel-control-next no-border" type="button" data-bs-target="#grammarCarousel" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                </button>
