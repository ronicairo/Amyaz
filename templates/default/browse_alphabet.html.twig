{% extends 'base.html.twig' %}

{% block title %}{{ 'Lettre'|trans }} {{ letter }}{% endblock %}

{% block body %}
<style>
    .alphabet-nav {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        gap: 10px;
        margin: 30px auto;
        max-width: 800px;
    }
    
    .alphabet-nav a {
        display: flex;
        align-items: center;
        justify-content: center;
        width: 45px;
        height: 45px;
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.7), rgba(0, 0, 0, 0.5));
        color: white;
        text-decoration: none;
        border-radius: 10px;
        font-weight: bold;
        font-size: 1.2rem;
        transition: all 0.3s ease;
        box-shadow: 0 5px 15px rgba(0, 0, 0, 0.3);
    }
    
    .alphabet-nav a:hover {
        background: linear-gradient(135deg, #A0BBD4, #7A9AB8);
        transform: translateY(-3px);
        box-shadow: 0 8px 20px rgba(0, 0, 0, 0.4);
    }
    
    .alphabet-nav a.active {
        background: linear-gradient(135deg, #dec5a5, #c9a878);
        color: #000;
    }
    
    .letter-title {
        text-align: center;
        font-family: 'DM Serif Display', serif;
        font-size: 3rem;
        margin: 40px 0 20px;
        color: #dec5a5;
        text-shadow: 2px 2px 4px rgba(0, 0, 0, 0.8);
    }
    
    .word-count {
        text-align: center;
        color: #f0e6d6;
        margin-bottom: 30px;
        font-size: 1.1rem;
    }
    
    .back-home {
        text-align: center;
        margin: 20px 0;
    }
    
    .back-home a {
        color: #000000;
        text-decoration: none;
        font-size: 1.1rem;
        transition: color 0.3s ease;
    }
    
    .back-home a:hover {
        color: #dec5a5;
    }
    
    /* Réutiliser les styles de la page d'accueil */
    .favorite-icon {
        position: absolute;
        cursor: pointer;
    }

    .favorite-icon i {
        font-size: 24px;
        color: white;
    }

    .favorite-icon i:hover {
        color: #ffc107;
    }
    
    .card {
        background: linear-gradient(180deg, rgba(0, 0, 0, 0.918), rgba(0, 0, 0, 0.493));
        box-shadow: 0 10px 10px rgba(0, 0, 0, 0.6);
        border-radius: 20px;
        width: 100%;
        color: #ffffff;
        padding: 0;
        position: relative;
        text-align: center;
        margin: 20px;
    }
    
    .custom-card {
        transition: border-color 0.3s ease;
    }

    .custom-card:hover {
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
    }
    
    .card-container {
        display: flex;
        flex-wrap: wrap;
        justify-content: center;
        margin-top: 30px;
    }
    
    .profile-img {
        width: 30px;
        height: 30px;
        border-radius: 50%;
        object-fit: cover;
    }
    
    .recorder-player {
        color: white;
        margin-left: 5px;
        font-size: 15px;
        padding: 7px;
    }
    
    .recorder-player:hover {
        color: #0db6ff;
    }
    
    .modal-content.modal-information {
        background: linear-gradient(135deg, rgba(0, 0, 0, 0.9), rgba(0, 0, 0, 0.75));
        box-shadow: 0 15px 25px rgba(0, 0, 0, 0.6);
        border: 1px solid #333;
        border-radius: 20px;
        color: white;
    }
    
    .modal-content.modal-information .modal-header,
    .modal-content.modal-information .modal-footer {
        border: none;
    }
    
    .modal-content.modal-information .list-group-item {
        background-color: transparent;
        border: none;
        color: #ddd;
        padding-left: 0;
    }
    
    .modal-content.modal-information .modal-title i {
        color: #fff;
    }
    
    .modal-content.modal-information .btn-close {
        filter: invert(1);
    }
</style>

<main>
    <div class="col-11 mx-auto">
        {% include 'include/flashes.html.twig' %}
    </div>
    
    <div class="back-home">
        <a href="{{ path('show_home') }}">
            <i class="bi bi-arrow-left"></i> {{ 'home.back_to_home'|trans }}
        </a>
    </div>
    
    <h1 class="letter-title"> {{ letter }}</h1>
    
    {% if pagination.getTotalItemCount > 0 %}
        <p class="word-count">
            {{ pagination.getTotalItemCount }} Mots trouvés pour la lettre "{{ letter }}"
        </p>
    {% endif %}
    
    {# Navigation alphabétique #}
    <div class="alphabet-nav">
        {% set alphabet = 'abcdefghijklmnopqrstuvwxyz'|split('') %}
        {% for char in alphabet %}
            <a href="{{ path('browse_by_letter', {'letter': char}) }}" 
               class="{% if char == letter|lower %}active{% endif %}">
                {{ char|upper }}
            </a>
        {% endfor %}
    </div>
    
    {# Affichage des cartes de traduction #}
    {% if pagination.getTotalItemCount > 0 %}
        <div class="card-container row mt-4">
            {% for traduction in pagination %}
                <div class="card col-11 col-md-9 col-lg-6 custom-card" style="background: rgba(0, 0, 0, 0.624); border: 1px solid black;">
                    {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                        <button style="color: #fff" type="button" class="btn btn-sm position-absolute top-0 mt-2 me-2" data-bs-toggle="modal" data-bs-target="#confirmDeleteModal{{ traduction.id }}">
                            &times;
                        </button>
                        <button style="color: #fff; right: 0; margin-right: 1rem;" type="button" class="btn btn-sm position-absolute top-0 mt-2 me-2">
                            <a href="{{ path('app_traduction_edit', {'id': traduction.id}) }}">
                                <i class="bi bi-pencil" style="color: white;"></i>
                            </a>
                        </button>
                    {% endif %}
                    
                    {% set isFavorite = false %}
                    {% for favorite in favorites %}
                        {% if favorite.getTraduction() is not null and favorite.getTraduction().id == traduction.id %}
                            {% set isFavorite = true %}
                        {% endif %}
                    {% endfor %}
                    
                    <span class="favorite-icon" data-id="{{ traduction.id }}" 
                          style="{% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}top: 2.5rem;{% else %}top: 0.5rem;{% endif %} right: 1rem;">
                        <i class="bi bi-star-fill {% if isFavorite %}text-warning{% endif %}"></i>
                    </span>
                    
                    {% if traduction.requestedBy is not null and not (traduction.requestedBy.roles is same as([]) or 'ROLE_ADMIN' in traduction.requestedBy.roles or 'ROLE_MODERATOR' in traduction.requestedBy.roles) %}
                        <div class="added-by-info mt-3">
                            <p>{{ 'post.added_by'|trans }}
                                <strong style="color:#F26766;">{{ traduction.requestedBy.username }}</strong>
                                {{ 'post.verified'|trans }}
                            </p>
                            <div class="profile-picture mt-2" style="position: absolute; {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}top: 4.5rem;{% else %}top: 2.5rem;{% endif %} right: 1rem;">
                                {% if traduction.requestedBy.picture %}
                                    <img src="{{ asset('uploads/profile/' ~ traduction.requestedBy.picture) }}" alt="Photo de profil" class="profile-img">
                                {% else %}
                                    <img src="{{ asset('uploads/profile/default_profile_picture.jpg') }}" alt="Photo de profil" class="profile-img">
                                {% endif %}
                            </div>
                        </div>
                    {% endif %}
                    
                    <div class="card-body">
                        {% set grammar = app.request.locale == 'en' ? traduction.grammarEN : traduction.grammarFR %}
                        <p class="card-text">{{ grammar }}</p>
                        
                        <h5 class="card-title">
                            {{ app.request.locale == 'en' ? traduction.wordEN : traduction.wordFR }}
                        </h5>
                        
                        <h6 class="card-subtitle mb-2" style="color: #dec5a5;">
                            <span style="margin-top: 10px; display: block; text-transform: lowercase; font-size: 20px;">
                                {% if traduction.plural %}
                                    <span>
                                        {{ 'home.singular'|trans }}: {{ traduction.singular }}
                                        {% if traduction.hasRifainSingularRecord %}
                                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}" class="audio-trigger">
                                                    <i class="fa-solid fa-volume-high recorder-player"></i>
                                                </a>
                                            {% else %}
                                                <a href="#" class="audio-trigger" onclick="alert('{{ 'home.login_required'|trans }}'); return false;">
                                                    <i class="fa-solid fa-volume-high recorder-player"></i>
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    </span>
                                    <br>
                                    <span style="margin-top: 10px; display: block;">
                                        {{ 'home.plural'|trans }}: {{ traduction.plural }}
                                        {% if traduction.hasRifainPluralRecord %}
                                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainPluralRecord' }) }}" class="audio-trigger">
                                                    <i class="fa-solid fa-volume-high recorder-player"></i>
                                                </a>
                                            {% else %}
                                                <a href="#" class="audio-trigger" onclick="alert('{{ 'home.login_required'|trans }}'); return false;">
                                                    <i class="fa-solid fa-volume-high recorder-player"></i>
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    </span>
                                {% else %}
                                    <span>{{ traduction.singular }}
                                        {% if traduction.hasRifainSingularRecord %}
                                            {% if is_granted('IS_AUTHENTICATED_FULLY') %}
                                                <a href="{{ path('audio_serve', { id: traduction.id, field: 'rifainSingularRecord' }) }}" class="audio-trigger">
                                                    <i class="fa-solid fa-volume-high recorder-player"></i>
                                                </a>
                                            {% else %}
                                                <a href="#" class="audio-trigger" onclick="alert('{{ 'home.login_required'|trans }}'); return false;">
                                                    <i class="fa-solid fa-volume-high recorder-player"></i>
                                                </a>
                                            {% endif %}
                                        {% endif %}
                                    </span>
                                {% endif %}
                                <hr class="mb-0">
                            </span>
                            <br>
                            {% if traduction.phoneticPlural %}
                                <span>{{ 'home.tifinagh_singular'|trans }}: {{ traduction.phoneticSingular }}</span>
                                <br>
                                <span style="margin-top: 10px; display: block;">
                                    {{ 'home.tifinagh_plural'|trans }}: {{ traduction.phoneticPlural }}
                                </span>
                            {% elseif traduction.phoneticSingular %}
                                <span style="margin-top: 20px; display: block;">
                                    {{ 'home.tifinagh_verb'|trans }}: {{ traduction.phoneticSingular }}
                                </span>
                            {% endif %}
                        </h6>
                        
                        {# Modal d'information #}
                        {% if traduction.source is not empty or traduction.origin is not empty or traduction.example is not empty or traduction.racine is not empty %}
                            <button type="button" class="btn btn-outline-info btn-sm mt-2" data-bs-toggle="modal" data-bs-target="#infoModal{{ traduction.id }}">
                                <i class="bi bi-info-circle"></i>
                            </button>
                            
                            <div class="modal fade" id="infoModal{{ traduction.id }}" tabindex="-1" aria-hidden="true">
                                <div class="modal-dialog modal-dialog-scrollable modal-sm modal-dialog-centered">
                                    <div class="modal-content modal-information">
                                        <div class="modal-header">
                                            <h5 class="modal-title">
                                                <i class="bi bi-info-circle-fill me-2"></i>
                                                {{ 'home.translation_info'|trans }}
                                            </h5>
                                            <button type="button" class="btn-close btn-sm" data-bs-dismiss="modal"></button>
                                        </div>
                                        <div class="modal-body">
                                            <ul class="list-group list-group-flush small">
                                                {% if traduction.origin %}
                                                    <li class="list-group-item">
                                                        <i class="bi bi-geo-alt-fill me-2"></i>
                                                        <strong>{{ 'home.origin'|trans }}:</strong> {{ traduction.origin|e }}
                                                    </li>
                                                {% endif %}
                                                {% if traduction.racine %}
                                                    <li class="list-group-item">
                                                        <i class="bi bi-diagram-3-fill me-2"></i>
                                                        <strong>{{ 'home.root'|trans }}:</strong> {{ traduction.racine|e }}
                                                    </li>
                                                {% endif %}
                                                {% if traduction.example %}
                                                    <li class="list-group-item">
                                                        <i class="bi bi-chat-left-text-fill me-2"></i>
                                                        <strong>{{ 'home.example'|trans }}:</strong> {{ traduction.example|e }}
                                                    </li>
                                                {% endif %}
                                                {% if traduction.source %}
                                                    <li class="list-group-item">
                                                        <i class="bi bi-globe-americas me-2"></i>
                                                        <strong>{{ 'home.source'|trans }}:</strong> {{ traduction.source|e }}
                                                    </li>
                                                {% endif %}
                                            </ul>
                                        </div>
                                        <div class="modal-footer pt-0">
                                            <button type="button" class="btn btn-outline-light btn-sm" data-bs-dismiss="modal">
                                                <i class="bi bi-x-circle"></i> {{ 'home.close'|trans }}
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        {% endif %}
                    </div>
                </div>
                
                {# Modal de confirmation de suppression #}
                {% if is_granted('ROLE_ADMIN') or is_granted('ROLE_MODERATOR') %}
                    <div class="modal fade" id="confirmDeleteModal{{ traduction.id }}" tabindex="-1" aria-hidden="true">
                        <div class="modal-dialog">
                            <div class="modal-content">
                                <div class="modal-header">
                                    <h5 class="modal-title">{{ 'home.confirm_delete'|trans }}</h5>
                                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                                </div>
                                <div class="modal-body">
                                    {{ 'home.confirm_delete_message'|trans }}
                                </div>
                                <div class="modal-footer">
                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">{{ 'home.cancel'|trans }}</button>
                                    <form action="{{ path('app_traduction_delete', {'id': traduction.id}) }}" method="post">
                                        <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ traduction.id) }}">
                                        <button type="submit" class="btn btn-danger">{{ 'home.delete'|trans }}</button>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endif %}
            {% endfor %}
        </div>
        
        <div id="pagination-container" class="pagination justify-content-center mt-4">
            {{ knp_pagination_render(pagination) }}
        </div>
    {% else %}
        <div class="alert alert-warning text-center mt-5" role="alert">
            <p class="text-dark">{{ 'home.no_words_for_letter'|trans }}</p>
        </div>
    {% endif %}
</main>

<script>
document.addEventListener('DOMContentLoaded', function () {
    document.querySelectorAll('.favorite-icon').forEach(function (star) {
        star.addEventListener('click', function () {
            const traductionId = this.getAttribute('data-id');
            const isFavorite = this.querySelector('i').classList.contains('text-warning');
            const url = isFavorite ? '{{ path('favorite_remove_word') }}' : '{{ path('favorite_add_word') }}';

            fetch(url, {
                method: 'POST',
                headers: {
                    'Content-Type': 'application/json',
                    'X-Requested-With': 'XMLHttpRequest',
                    'X-CSRF-TOKEN': '{{ csrf_token('favorite_toggle') }}'
                },
                body: JSON.stringify({traduction_id: traductionId})
            }).then(response => response.json()).then(data => {
                if (data.status === 'success') {
                    if (isFavorite) {
                        this.querySelector('i').classList.remove('text-warning');
                    } else {
                        this.querySelector('i').classList.add('text-warning');
                    }
                    location.reload();
                } else {
                    alert('Erreur: ' + data.message);
                }
            });
        });
    });
});
</script>
{% endblock %}